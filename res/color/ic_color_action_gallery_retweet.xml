<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:twitter="http://schemas.android.com/apk/res-auto">
    <item
        android:state_enabled="false"
        android:color="?coreColorInlineActionGalleryDisabled" />
    <item
        android:color="?coreColorInlineActionGalleryDisabled"
        twitter:state_deactivated="true" />
    <item
        android:state_pressed="true"
        android:color="?coreColorInlineActionGalleryPressed" />
    <item
        android:color="@color/inline_action_retweet_exclusive"
        twitter:state_toggled_on_exclusive="true" />
    <item
        android:color="@color/inline_action_retweet"
        twitter:state_toggled_on="true" />
    <item
        android:state_checked="true"
        android:color="@color/inline_action_retweet" />
    <item
        android:color="?coreColorInlineActionGallery" />
</selector>