<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:twitter="http://schemas.android.com/apk/res-auto">
    <item
        android:state_enabled="false"
        android:color="?coreColorInlineActionDetailDisabled" />
    <item
        android:state_pressed="true"
        android:color="?coreColorInlineActionDetailPressed" />
    <item
        android:color="?coreColorInlineActionDetailDisabled"
        twitter:state_deactivated="true" />
    <item
        android:color="@color/inline_action_like"
        twitter:state_toggled_on="true" />
    <item
        android:state_checked="true"
        android:color="@color/inline_action_like" />
    <item
        android:color="?coreColorInlineActionDetail" />
</selector>