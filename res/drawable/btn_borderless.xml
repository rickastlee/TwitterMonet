<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <solid
                android:color="?abstractColorLightGray" />
            <corners
                android:radius="@dimen/corner_radius_x_small" />
        </shape>
    </item>
    <item
        android:state_enabled="false">
        <shape
            android:shape="rectangle">
            <solid
                android:color="?abstractColorLightGray" />
            <corners
                android:radius="@dimen/corner_radius_x_small" />
        </shape>
    </item>
    <item
        android:state_enabled="true">
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/white" />
            <stroke
                android:width="@dimen/border_width_small"
                android:color="@color/white" />
            <corners
                android:radius="@dimen/corner_radius_x_small" />
        </shape>
    </item>
</selector>