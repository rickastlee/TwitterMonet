<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background">
        <shape>
            <corners
                android:radius="@dimen/corner_radius_x_small" />
            <solid
                android:color="?abstractElevatedBackground" />
        </shape>
    </item>
    <item
        android:id="@android:id/progress">
        <scale
            android:scaleWidth="100%">
            <shape
                android:shape="rectangle"
                xmlns:android="http://schemas.android.com/apk/res/android">
                <corners
                    android:radius="@dimen/corner_radius_x_small" />
                <gradient
                    android:startColor="@color/blue_300"
                    android:endColor="@color/blue_500"
                    android:angle="0.0"
                    android:type="linear" />
            </shape>
        </scale>
    </item>
</layer-list>