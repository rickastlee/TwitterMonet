<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background">
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/ps__white_30" />
            <corners
                android:radius="@dimen/ps__timecode_seekbar_background_radius" />
        </shape>
    </item>
    <item
        android:id="@android:id/progress">
        <clip>
            <shape
                android:shape="rectangle">
                <corners
                    android:radius="@dimen/ps__timecode_seekbar_background_radius" />
                <solid
                    android:color="@color/ps__white" />
            </shape>
        </clip>
    </item>
</layer-list>