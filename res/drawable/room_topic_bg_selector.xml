<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_enabled="false"
        android:state_selected="false">
        <shape
            android:shape="rectangle">
            <corners
                android:radius="@dimen/corner_radius_infinite" />
            <solid
                android:color="@color/clear" />
            <stroke
                android:width="@dimen/border_width_small"
                android:color="@color/gray_300_opacity_50" />
        </shape>
    </item>
    <item
        android:state_enabled="true"
        android:state_selected="false">
        <shape
            android:shape="rectangle">
            <corners
                android:radius="@dimen/corner_radius_infinite" />
            <solid
                android:color="?coreColorAppBackground" />
            <stroke
                android:width="@dimen/border_width_small"
                android:color="@color/gray_300" />
        </shape>
    </item>
    <item
        android:state_enabled="true"
        android:state_selected="true">
        <shape
            android:shape="rectangle">
            <corners
                android:radius="@dimen/corner_radius_infinite" />
            <solid
                android:color="?coreColorPrimaryText" />
        </shape>
    </item>
</selector>