<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <View
        style="@style/HorizontalRule" />
    <FrameLayout
        android:paddingTop="@dimen/ocf_small_spacing"
        android:paddingBottom="@dimen/ocf_small_spacing"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/ocf_standard_spacing"
        android:paddingEnd="@dimen/ocf_standard_spacing">
        <com.twitter.ui.components.button.compose.HorizonComposeButton
            android:layout_gravity="start|center"
            android:id="@id/secondary_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/space_12"
            style="@style/TwitterButtonMediumPrimaryOutlined" />
        <DatePicker
            android:layout_gravity="bottom|center"
            android:id="@id/date_picker"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            style="@style/OcfSignUpDatePicker" />
        <com.twitter.ui.components.button.compose.HorizonComposeButton
            android:layout_gravity="end|center|top"
            android:id="@id/cta_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TwitterButtonMediumPrimaryFilled" />
    </FrameLayout>
</LinearLayout>