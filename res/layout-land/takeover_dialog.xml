<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:id="@id/dialog_panel"
    android:background="@color/twitter_blue"
    android:clipChildren="false"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:twitter="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_gravity="start|center"
        android:id="@id/button_dismiss"
        android:layout_width="wrap_content"
        android:layout_height="0.0dip"
        android:src="@drawable/ic_vector_close_nomargin"
        android:layout_weight="16.0"
        android:contentDescription="@string/cancel"
        android:paddingStart="@dimen/prompt_dismiss_padding"
        android:paddingEnd="@dimen/prompt_dismiss_padding"
        fresco:tint="@color/white" />
    <RelativeLayout
        android:orientation="vertical"
        android:clipChildren="false"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="76.0">
        <ImageView
            android:id="@id/logo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/prompt_one_line_height"
            android:layout_marginBottom="@dimen/prompt_one_line_height"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@null"
            fresco:srcCompat="@drawable/ic_vector_twitter_white" />
        <ImageView
            android:id="@id/dialog_icon"
            android:visibility="gone"
            android:layout_width="0.0dip"
            android:layout_height="0.0dip"
            android:contentDescription="@null" />
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@id/dialog_icon_media"
            android:visibility="gone"
            android:layout_width="0.0dip"
            android:layout_height="0.0dip"
            android:contentDescription="@null"
            fresco:scaleType="centerInside" />
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:id="@id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:paddingStart="@dimen/prompt_fullscreen_text_padding_horizontal"
            android:paddingEnd="@dimen/prompt_fullscreen_text_padding_horizontal"
            style="@style/PromptText" />
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:id="@id/dialog_message"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.twitter.ui.components.button.legacy.TwitterButton
            android:id="@id/button_positive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/button_negative"
            android:layout_centerHorizontal="true"
            android:layout_alignWithParentIfMissing="true"
            fresco:fillColor="@color/white"
            style="@style/TwitterButtonLargeBrandOutlined" />
        <com.twitter.ui.components.button.legacy.TwitterButton
            android:id="@id/button_negative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/prompt_between_button_margin"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            fresco:bounded="false"
            style="@style/TwitterButtonLargeInvertedOutlined" />
    </RelativeLayout>
    <View
        android:visibility="invisible"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="8.0" />
</LinearLayout>