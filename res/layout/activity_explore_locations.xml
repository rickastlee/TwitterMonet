<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <tag
        android:value="com.twitter.android.explore.locations.ExploreLocationsViewModel"
        android:id="@id/viewModel" />
    <tag
        android:value="com.twitter.android.explore.locations.ExploreLocationsBinder"
        android:id="@id/viewBinder" />
    <ProgressBar
        android:layout_gravity="center"
        android:id="@id/loading_progress"
        android:padding="@dimen/space_8"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        style="?android:progressBarStyleSmall" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <EditText
            android:id="@id/suggestion_edit_text"
            android:padding="@dimen/space_8"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/explore_search_locations_hint"
            android:maxLines="1"
            android:scrollHorizontally="false"
            android:inputType="textNoSuggestions"
            android:imeOptions="flagNoExtractUi"
            android:fontFamily="?fontFamilyLight"
            style="@style/LocationsInputText" />
        <View
            android:background="?coreColorBorder"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/border_thickness"
            android:layout_marginVertical="@dimen/border_thickness" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@id/suggestion_recycler_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            style="@style/List" />
    </LinearLayout>
</FrameLayout>