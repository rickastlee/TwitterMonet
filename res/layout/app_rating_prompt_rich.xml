<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@id/app_rating_bar_container"
        android:paddingTop="20.0dip"
        android:paddingBottom="20.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@id/rating_star_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_ratings_star_off"
            android:contentDescription="@string/app_rating_1_star" />
        <ImageView
            android:id="@id/rating_star_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_ratings_star_off"
            android:contentDescription="@string/app_rating_2_star" />
        <ImageView
            android:id="@id/rating_star_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_ratings_star_off"
            android:contentDescription="@string/app_rating_3_star" />
        <ImageView
            android:id="@id/rating_star_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_ratings_star_off"
            android:contentDescription="@string/app_rating_4_star" />
        <ImageView
            android:id="@id/rating_star_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_ratings_star_off"
            android:contentDescription="@string/app_rating_5_star" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:padding="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="100.0dip">
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_normal"
            android:textStyle="bold"
            android:textColor="?coreColorPrimaryText"
            android:gravity="center"
            android:id="@id/app_rating_prompt_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_rating_prompt_rich_headline_initial" />
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_small"
            android:textColor="?coreColorPrimaryText"
            android:gravity="center"
            android:id="@id/app_rating_prompt_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_rating_prompt_rich_description_initial" />
    </LinearLayout>
    <View
        android:background="?coreColorBorder"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/border_thickness" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="10.0dip">
        <Button
            android:id="@id/app_rating_button_never"
            android:text="@string/app_rating_prompt_not_interested"
            style="@style/RatingPromptButton" />
        <View
            android:background="?coreColorBorder"
            android:layout_width="@dimen/border_thickness"
            android:layout_height="fill_parent" />
        <Button
            android:id="@id/app_rating_button_maybe"
            android:text="@string/app_rating_prompt_maybe_later"
            style="@style/RatingPromptButton" />
        <Button
            android:id="@id/app_rating_button_rate"
            android:visibility="gone"
            android:text="@string/app_rating_prompt_continue"
            style="@style/RatingPromptButton" />
        <Button
            android:id="@id/app_rating_button_feedback"
            android:visibility="gone"
            android:text="@string/app_rating_prompt_leave_feedback"
            style="@style/RatingPromptButton" />
    </LinearLayout>
</LinearLayout>