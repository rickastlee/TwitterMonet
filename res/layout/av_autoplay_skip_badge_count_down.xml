<?xml version="1.0" encoding="utf-8"?>
<com.twitter.media.av.ui.control.SkipWithCountDownBadgeView
    android:layout_gravity="end|bottom|center"
    android:id="@id/av_autoplay_skip_outer_container"
    android:background="@drawable/bg_media_badge"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/inset_medium"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:id="@id/av_badge_duration_text"
        android:visibility="gone"
        style="@style/AutoPlayBadgeText" />
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@id/av_skip_badge_container"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_small"
            android:textColor="@color/white"
            android:paddingTop="3.0dip"
            android:paddingBottom="5.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/skip"
            android:paddingStart="10.0dip" />
        <ImageView
            android:layout_width="12.0dip"
            android:layout_height="12.0dip"
            android:src="@drawable/ic_vector_skip"
            android:scaleType="fitXY"
            android:contentDescription="@string/skip"
            android:layout_marginStart="4.0dip"
            android:layout_marginEnd="6.0dip"
            app:tint="@color/video_icon_tint" />
    </LinearLayout>
</com.twitter.media.av.ui.control.SkipWithCountDownBadgeView>