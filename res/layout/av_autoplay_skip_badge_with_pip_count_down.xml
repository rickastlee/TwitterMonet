<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_gravity="end|bottom|center"
    android:background="@drawable/bg_media_badge"
    android:visibility="gone"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/inset_medium"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:twitter="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@id/countdown_container"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:id="@id/av_badge_duration_text"
            style="@style/AutoPlayBadgeText" />
        <com.twitter.media.ui.fresco.FrescoMediaImageView
            android:id="@id/thumbnail_image"
            android:background="@color/gray_200"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_36">
            <com.twitter.media.ui.fresco.FrescoDraweeView
                android:id="@id/image"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                twitter:placeholderImage="@drawable/drawable_color_placeholder_bg"
                twitter:scaleType="fill" />
        </com.twitter.media.ui.fresco.FrescoMediaImageView>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@id/av_skip_badge_container"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_small"
            android:textColor="@color/white"
            android:paddingTop="3.0dip"
            android:paddingBottom="5.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/skip"
            android:paddingStart="10.0dip" />
        <ImageView
            android:layout_width="12.0dip"
            android:layout_height="12.0dip"
            android:src="@drawable/ic_vector_skip"
            android:scaleType="centerInside"
            android:contentDescription="@string/skip"
            android:layout_marginStart="4.0dip"
            android:layout_marginEnd="6.0dip"
            twitter:tint="@color/video_icon_tint" />
    </LinearLayout>
</FrameLayout>