<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@id/audio_toggle_view"
    android:background="@drawable/timeline_bg_audio_toggle_button"
    android:visibility="gone"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/timeline_audio_toggle_button_margin_bottom"
    android:layout_marginEnd="@dimen/timeline_audio_toggle_button_margin_side"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_gravity="center"
        android:id="@id/audio_toggle_icon"
        android:layout_width="20.0dip"
        android:layout_height="20.0dip"
        android:layout_margin="@dimen/timeline_audio_toggle_icon_margin"
        android:scaleType="centerInside"
        app:tint="@color/white" />
</FrameLayout>