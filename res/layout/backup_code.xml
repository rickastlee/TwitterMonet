<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/standard_spacing">
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_small"
            android:textColor="?coreColorPrimaryText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/what_is_a_backup_code" />
    </LinearLayout>
    <View
        android:background="?coreColorBorder"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/border_thickness" />
    <ViewStub
        android:id="@id/list_view_stub"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
    <include
        android:id="@android:id/empty"
        layout="@layout/empty_list_layout" />
    <View
        android:background="?coreColorBorder"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/border_thickness" />
</LinearLayout>