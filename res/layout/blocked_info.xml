<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="horizontal"
    android:id="@id/block_info"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="6.0sp"
    android:layout_below="@id/account_info"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:twitter="http://schemas.android.com/apk/res-auto">
    <com.twitter.ui.widget.TintableImageView
        android:id="@id/block_icon"
        android:layout_width="20.0dip"
        android:layout_height="20.0dip"
        android:layout_marginTop="6.0dip"
        android:src="?iconBlocked"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:contentDescription="@null"
        android:layout_marginEnd="6.0dip"
        android:layout_alignParentStart="true"
        twitter:tintColorList="@color/destructive_red" />
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:id="@id/block_info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/block_icon"
        style="?userBlockInfoStyle" />
</RelativeLayout>