<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_gravity="fill_horizontal"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/bonus_follows_padding"
    android:paddingEnd="@dimen/bonus_follows_padding"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.twitter.ui.widget.TintableImageView
        android:layout_gravity="end"
        android:id="@id/dismiss_btn"
        android:padding="7.0dip"
        android:layout_width="@dimen/dismiss_button_size"
        android:layout_height="@dimen/dismiss_button_size"
        style="@style/InlineDismissStyle" />
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:gravity="start"
        android:id="@id/primary_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-16.0dip"
        style="@style/BonusFollowsPrimaryText" />
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:gravity="start"
        android:id="@id/secondary_text"
        android:paddingTop="@dimen/bonus_follows_padding"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/BonusFollowsSecondaryText" />
    <include
        layout="@layout/bonus_follows_facepile_and_button_container" />
</LinearLayout>