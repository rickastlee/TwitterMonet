<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:id="@id/hours_row_header"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/hours_row_subtext"
        app:layout_constraintEnd_toStartOf="@id/hours_radio_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        style="@style/BusinessInfoHeaderText" />
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:id="@id/hours_row_subtext"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/hours_radio_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hours_row_header"
        style="@style/HoursScreenSubText" />
    <RadioButton
        android:id="@id/hours_radio_button"
        android:focusable="false"
        android:clickable="false"
        android:layout_marginTop="@dimen/space_20"
        android:layout_marginBottom="@dimen/space_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/hours_row_header"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/HoursRadioButton" />
</androidx.constraintlayout.widget.ConstraintLayout>