<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@id/timezone_row"
    android:background="@drawable/ripple_pressed_selector_rectangle"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:id="@id/timezone_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/custom_hours_timezone_header"
        style="@style/TimezoneHeader" />
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:id="@id/timezone_subtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/timezone_header"
        style="@style/TimezoneSubtext" />
</androidx.constraintlayout.widget.ConstraintLayout>