<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@id/room_joining_privacy_listener"
    android:background="@drawable/rounded_rect_black_border"
    android:layout_width="120.0dip"
    android:layout_height="50.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include
        android:id="@id/checkable_guest_type_view_check"
        android:background="@drawable/twitter_white_circle"
        android:visibility="invisible"
        android:layout_width="22.0dip"
        android:layout_height="22.0dip"
        android:layout_marginEnd="0.0dip"
        android:layout_alignParentEnd="true"
        layout="@layout/room_check_button_border" />
    <ImageView
        android:id="@id/checkable_guest_type_view_emoji"
        android:layout_width="20.0dip"
        android:layout_height="20.0dip"
        android:src="@drawable/ic_mute_emoji"
        android:layout_centerVertical="true"
        android:contentDescription="@string/mute_room_button"
        android:layout_marginStart="@dimen/space_12"
        android:layout_marginEnd="@dimen/space_4"
        android:layout_alignParentStart="true" />
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:textSize="@dimen/font_size_normal"
        android:textStyle="bold"
        android:textColor="?coreColorPrimaryText"
        android:id="@id/checkable_guest_type_view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_status_listener"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/checkable_guest_type_view_emoji" />
</RelativeLayout>