<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@drawable/education_prompt_background"
    android:visibility="gone"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/space_16"
    android:paddingVertical="@dimen/space_12"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.twitter.ui.widget.UnpaddedTextLayoutView
        android:textSize="@dimen/font_size_normal"
        android:textColor="@color/white"
        android:id="@id/social_context_education_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/social_context_education_prompt_title"
        android:textAlignment="center" />
    <com.twitter.ui.widget.UnpaddedTextLayoutView
        android:textSize="@dimen/font_size_small"
        android:textColor="@color/white"
        android:id="@id/social_context_education_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_4"
        android:text="@string/social_context_education_prompt_description"
        android:textAlignment="center" />
    <tag
        android:value="SocialContextEducation"
        android:id="@id/weaverComponent" />
</LinearLayout>