<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:focusableInTouchMode="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:twitter="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:id="@id/full_screen_header"
            android:background="?coreColorAppBackground"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <com.twitter.ui.autocomplete.ListViewSuggestionEditText
                android:gravity="center_vertical"
                android:id="@id/suggestion_edit_text"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5.0dip"
                android:minHeight="@dimen/list_preferred_height"
                android:drawablePadding="5.0dip"
                android:layout_weight="1.0"
                android:inputType="text"
                android:imeOptions="actionSearch|flagNoExtractUi"
                android:drawableStart="@drawable/ic_search_hint_dark"
                android:layout_marginStart="16.0dip"
                android:layout_marginEnd="12.0dip"
                twitter:lengthThreshold="0"
                style="@style/TwitterEditText" />
            <com.twitter.ui.components.text.legacy.TypefacesTextView
                android:textSize="@dimen/font_size_normal"
                android:textStyle="bold"
                android:textColor="@color/twitter_blue"
                android:gravity="center_vertical"
                android:id="@id/done_button"
                android:background="?selectableItemBackgroundBorderless"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/cancel"
                android:textAllCaps="true"
                android:layout_marginEnd="16.0dip" />
        </LinearLayout>
        <View
            android:id="@id/divider_border_1"
            android:background="?coreColorBorder"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/border_thickness" />
        <ListView
            android:id="@id/suggestion_list_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/List" />
        <View
            android:background="?coreColorAppBackground"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0" />
    </LinearLayout>
    <FrameLayout
        android:id="@android:id/empty"
        android:background="?coreColorAppBackground"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_normal"
            android:textColor="?abstractColorDeepGray"
            android:layout_gravity="center|top"
            android:id="@id/list_empty_text"
            android:paddingTop="@dimen/space_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standard_spacing"
            android:text="@string/composer_selection_empty_text" />
    </FrameLayout>
</FrameLayout>