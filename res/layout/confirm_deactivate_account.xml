<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="?coreColorAppBackground"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@id/dismiss_button"
            android:padding="@dimen/space_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.0dip"
            android:src="@drawable/ic_action_dismiss"
            android:contentDescription="@string/cancel"
            android:layout_marginEnd="0.0dip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@id/twitter_icon"
            android:focusable="false"
            android:clickable="false"
            android:layout_width="@dimen/space_40"
            android:layout_height="@dimen/space_40"
            android:layout_marginTop="@dimen/space_40"
            android:src="?iconTwitter"
            android:contentDescription="@null"
            app:layout_constraintBottom_toTopOf="@id/primary_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:tint="?coreColorBadgeVerified" />
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_xlarge"
            android:id="@id/primary_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_40"
            android:text="@string/deactivate_account_password_entry_title"
            android:layout_marginStart="@dimen/space_16"
            android:layout_marginEnd="@dimen/space_16"
            app:layout_constraintBottom_toTopOf="@id/secondary_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/twitter_icon"
            style="@style/PrimaryText" />
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_normal"
            android:id="@id/secondary_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_16"
            android:text="@string/deactivate_account_password_entry_summary"
            android:layout_marginStart="@dimen/space_16"
            android:layout_marginEnd="@dimen/space_16"
            app:layout_constraintBottom_toTopOf="@id/current_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/primary_text"
            style="@style/SecondaryText" />
        <com.twitter.ui.widget.TwitterEditText
            android:id="@id/current_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_16"
            android:hint="@string/label_password"
            android:drawablePadding="2.0dip"
            android:inputType="textPassword"
            android:imeOptions="actionGo"
            android:layout_marginStart="@dimen/space_16"
            android:layout_marginEnd="@dimen/space_16"
            android:importantForAutofill="no"
            app:labelText="@string/confirm_deactivate_account_password_label"
            app:layout_constraintBottom_toTopOf="@id/horizontal_rule"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/secondary_text"
            app:statusIcon="@drawable/ic_sign_up_password_field_state_list"
            app:statusIconPosition="end" />
        <View
            android:id="@id/horizontal_rule"
            android:layout_marginBottom="@dimen/space_8"
            app:layout_constraintBottom_toTopOf="@id/primary_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="1.0"
            style="@style/HorizontalRule" />
        <com.twitter.ui.components.button.legacy.TwitterButton
            android:enabled="false"
            android:id="@id/primary_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_8"
            android:text="@string/confirm_deactivate_button_title"
            android:layout_marginEnd="@dimen/space_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/TwitterButtonLargeDestructiveOutlined" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>