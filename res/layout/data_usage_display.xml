<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    android:orientation="vertical"
    android:background="@drawable/overlay_background"
    android:padding="4.0dip"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:rowCount="5"
    android:columnCount="2"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tracked Time: "
        style="@style/DataUsageMeterCell" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From App: "
        style="@style/DataUsageMeterCell" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Per minute: "
        style="@style/DataUsageMeterCell" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Video usage: "
        style="@style/DataUsageMeterCell" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From System: "
        style="@style/DataUsageMeterCell" />
    <TextView
        android:id="@id/data_usage_tracking_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="n/a"
        style="@style/DataUsageMeterCell" />
    <TextView
        android:id="@id/data_usage_events"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="n/a"
        style="@style/DataUsageMeterCell" />
    <TextView
        android:id="@id/data_usage_events_per_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="n/a"
        style="@style/DataUsageMeterCell" />
    <TextView
        android:id="@id/data_usage_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="n/a"
        style="@style/DataUsageMeterCell" />
    <TextView
        android:id="@id/download_data_usage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="n/a"
        style="@style/DataUsageMeterCell" />
</GridLayout>