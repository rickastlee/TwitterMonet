<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@drawable/dm_list_row_background"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/share_cell_height"
    android:paddingStart="@dimen/space_16"
    android:paddingEnd="@dimen/space_16"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@id/group_icon"
        android:background="@drawable/bg_circle_stroke"
        android:layout_width="@dimen/medium_user_image_size"
        android:layout_height="@dimen/medium_user_image_size"
        android:src="@drawable/ic_vector_people_group_stroke"
        android:scaleType="centerInside"
        android:contentDescription="@string/dm_create_group_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?colorAccent" />
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:textSize="@dimen/font_size_normal"
        android:textStyle="bold"
        android:textColor="?colorAccent"
        android:id="@id/label"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:text="@string/dm_create_group_label"
        android:layout_marginStart="@dimen/space_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/group_icon"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>