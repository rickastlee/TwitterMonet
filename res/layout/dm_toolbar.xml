<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:gravity="center_vertical"
    android:paddingTop="?searchQueryViewInsetTopBottom"
    android:paddingBottom="?searchQueryViewInsetTopBottom"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingStart="?searchQueryViewInsetStart"
    android:paddingEnd="?searchQueryViewInsetEnd"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:textSize="@dimen/font_size_normal"
        android:textStyle="?boldOverrideStyle"
