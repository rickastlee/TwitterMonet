<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@color/twitter_blue"
    android:padding="20.0dip"
    android:layout_width="fill_parent"
    android:layout_height="0.0dip"
    android:elevation="8.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:twitter="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@id/logo"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/prompt_one_line_height"
        android:layout_marginTop="@dimen/space_32"
        android:contentDescription="@null"
        twitter:layout_constraintLeft_toLeftOf="parent"
        twitter:layout_constraintRight_toRightOf="parent"
        twitter:layout_constraintTop_toTopOf="parent"
        twitter:srcCompat="@drawable/ic_vector_twitter_white" />
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:id="@id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/prompt_fullscreen_text_padding_horizontal"
        android:paddingEnd="@dimen/prompt_fullscreen_text_padding_horizontal"
        twitter:layout_constraintBottom_toBottomOf="parent"
        twitter:layout_constraintLeft_toLeftOf="parent"
        twitter:layout_constraintRight_toRightOf="parent"
        twitter:layout_constraintTop_toTopOf="parent"
        style="@style/PromptText" />
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:textColor="@color/white"
        android:id="@id/dialog_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_16"
        android:textAlignment="center"
        twitter:layout_constraintLeft_toLeftOf="parent"
        twitter:layout_constraintRight_toRightOf="parent"
        twitter:layout_constraintTop_toBottomOf="@id/dialog_title" />
    <com.twitter.ui.components.button.legacy.TwitterButton
        android:id="@id/permissions_button_positive"
        android:layout_width="wrap_content"
        android:layout_height="42.0dip"
        android:layout_marginTop="@dimen/space_28"
        android:text="@string/cont"
        twitter:fillColor="@color/white"
        twitter:layout_constraintLeft_toLeftOf="parent"
        twitter:layout_constraintRight_toRightOf="parent"
        twitter:layout_constraintTop_toBottomOf="@id/dialog_subtitle"
        style="@style/TwitterButtonLargeBrandOutlined" />
</androidx.constraintlayout.widget.ConstraintLayout>