<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:twitter="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@id/bottom_of_video_container"
        android:layout_width="0.0dip"
        android:layout_height="0.0dip"
        twitter:layout_constraintBottom_toBottomOf="@id/video_container"
        twitter:layout_constraintEnd_toEndOf="parent"
        twitter:layout_constraintStart_toStartOf="parent" />
    <View
        android:id="@id/top_of_tick_marker"
        android:layout_width="0.0dip"
        android:layout_height="0.0dip"
        android:layout_marginTop="25.0dip"
        twitter:layout_constraintEnd_toEndOf="parent"
        twitter:layout_constraintStart_toStartOf="parent"
        twitter:layout_constraintTop_toTopOf="@id/range_seek_bar" />
    <com.twitter.media.ui.image.AspectRatioFrameLayout
        android:id="@id/video_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        twitter:layout_constraintBottom_toBottomOf="parent"
        twitter:layout_constraintEnd_toEndOf="parent"
        twitter:layout_constraintStart_toStartOf="parent"
        twitter:layout_constraintTop_toTopOf="parent"
        twitter:scaleMode="fit">
        <com.twitter.media.av.autoplay.ui.VideoContainerHost
            android:layout_gravity="center"
            android:id="@id/video_player"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
        <ImageButton
            android:layout_gravity="center"
            android:id="@id/play_button"
            android:background="@null"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_video_edit_play"
            android:contentDescription="@null" />
    </com.twitter.media.ui.image.AspectRatioFrameLayout>
    <com.twitter.videoeditor.widget.VideoClipRangeSeekBar
        android:id="@id/range_seek_bar"
        android:background="@null"
        android:layout_width="fill_parent"
        android:layout_height="88.0dip"
        android:paddingStart="15.0dip"
        android:paddingEnd="15.0dip"
        twitter:layout_constraintBottom_toTopOf="@id/control_buttons"
        twitter:layout_constraintEnd_toEndOf="parent"
        twitter:layout_constraintStart_toStartOf="parent">
        <com.twitter.ui.widget.TickMarksView
            android:textSize="@dimen/font_size_normal"
            android:id="@id/tick_marker"
            android:background="@drawable/track"
            android:layout_width="fill_parent"
            android:layout_height="48.0dip"
            android:layout_marginTop="25.0dip"
            twitter:tickMarkLabelMarginLeft="8.0dip"
            twitter:tickMarkLabelMarginTop="0.0dip"
            twitter:tickMarksMarkWidth="1.0dip"
            twitter:tickMarksMinGap="30.0dip" />
        <ProgressBar
            android:id="@id/clip"
            android:layout_width="0.0dip"
            android:layout_height="48.0dip"
            android:layout_marginTop="25.0dip"
            style="?android:progressBarStyleHorizontal" />
        <ImageView
            android:id="@id/drag_point"
            android:visibility="gone"
            android:layout_width="15.0dip"
            android:layout_height="64.0dip"
            android:layout_marginTop="17.0dip"
            android:src="@drawable/ic_drag_point"
            android:scaleType="fitXY"
            android:contentDescription="@null" />
    </com.twitter.videoeditor.widget.VideoClipRangeSeekBar>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/control_buttons"
        android:background="@color/black"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/video_editor_button_bar_height"
        twitter:layout_constraintBottom_toBottomOf="parent"
        twitter:layout_constraintEnd_toEndOf="parent"
        twitter:layout_constraintStart_toStartOf="parent">
        <ImageButton
            android:background="?selectableItemBackgroundBorderless"
            android:focusable="false"
            android:clickable="false"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:src="?iconPaintbrush"
            android:scaleType="centerInside"
            android:layout_weight="1.0"
            android:contentDescription="@string/edit_video_title"
            twitter:tint="@color/twitter_blue" />
        <ImageButton
            android:id="@id/sensitive_media"
            android:background="?selectableItemBackgroundBorderless"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:src="?iconFiltersSensitiveMedia"
            android:scaleType="centerInside"
            android:layout_weight="1.0"
            android:contentDescription="@string/button_sensitive_media"
            twitter:tint="@color/white" />
    </LinearLayout>
    <androidx.constraintlayout.widget.Barrier
        android:id="@id/badge_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        twitter:barrierDirection="top"
        twitter:constraint_referenced_ids="bottom_of_video_container,top_of_tick_marker" />
    <com.twitter.media.ui.image.FixedSizeImageView
        android:id="@id/sensitive_media_badge"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15.0dip"
        android:src="@drawable/sensitive_media_badge"
        android:contentDescription="@null"
        android:layout_marginEnd="15.0dip"
        twitter:layout_constraintBottom_toTopOf="@id/badge_barrier"
        twitter:layout_constraintEnd_toEndOf="@id/video_container" />
</androidx.constraintlayout.widget.ConstraintLayout>