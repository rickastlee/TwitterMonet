<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:paddingTop="@dimen/space_4"
    android:paddingBottom="@dimen/space_4"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/space_12"
    android:layout_marginBottom="@dimen/space_12"
    android:minWidth="@dimen/fleetline_spacebar_min_width"
    android:paddingStart="@dimen/space_4"
    android:paddingEnd="@dimen/space_4"
    android:layout_marginStart="@dimen/space_2"
    android:layout_marginEnd="@dimen/space_2"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:id="@id/animation_container"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="0.0dip"
        android:layout_height="0.0dip"
        app:layout_constraintBottom_toBottomOf="@id/spacebar_avatar_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/spacebar_avatar_primary" />
    <View
        android:id="@id/spacebar_item_bg"
        android:background="@drawable/spacebar_vnext_item_bg"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="0.0dip"
        android:layout_height="0.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ViewSwitcher
        android:id="@id/spacebar_switcher"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:inAnimation="@anim/spacebar_ticker_in_from_bottom"
        android:outAnimation="@anim/spacebar_ticker_out_to_top"
        android:layout_marginStart="@dimen/fleetline_spacebar_facepile_overlap"
        android:clipToOutline="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/spacebar_live_indicator"
        app:layout_constraintStart_toStartOf="@id/spacebar_avatar_primary"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:id="@id/spacebar_facepile_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.twitter.media.ui.image.UserImageView
                    android:id="@id/spacebar_facepile_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/fleetline_spacebar_facepile_overlap"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:scaleMode="fit"
                    app:userImageSize="small" />
                <com.twitter.media.ui.image.UserImageView
                    android:id="@id/spacebar_facepile_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:scaleMode="fit"
                    app:userImageSize="small" />
            </FrameLayout>
            <View
                android:id="@id/spacebar_avatar_spacer"
                android:visibility="gone"
                android:layout_width="@dimen/fleetline_spacebar_facepile_overlap"
                android:layout_height="0.0dip" />
            <com.twitter.ui.components.text.legacy.TypefacesTextView
                android:textSize="@dimen/font_size_normal"
                android:textColor="@color/text"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:id="@id/spacebar_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+100 * big long title that needs to be marqueed"
                android:singleLine="true"
                android:layout_marginStart="@dimen/space_4"
                android:layout_marginEnd="@dimen/space_4" />
        </LinearLayout>
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_normal"
            android:textColor="@color/text"
            android:layout_gravity="center_vertical"
            android:id="@id/spacebar_ticker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:paddingStart="@dimen/fleetline_spacebar_facepile_overlap" />
    </ViewSwitcher>
    <com.twitter.media.ui.image.UserImageView
        android:layout_gravity="center_vertical"
        android:id="@id/spacebar_avatar_primary"
        android:paddingTop="2.0dip"
        android:paddingBottom="2.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:scaleMode="fit"
        app:userImageSize="small" />
    <com.twitter.common.ui.isTalkingView.IsTalkingView
        android:id="@id/spacebar_live_indicator"
        android:layout_width="@dimen/space_16"
        android:layout_height="@dimen/space_12"
        android:importantForAccessibility="no"
        android:layout_marginEnd="@dimen/space_12"
        app:barColor="@color/purple_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <tag
        android:value="SpacebarItem"
        android:id="@id/weaverComponent" />
</androidx.constraintlayout.widget.ConstraintLayout>