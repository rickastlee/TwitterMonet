<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:textSize="@dimen/font_size_normal"
        android:textColor="@color/white"
        android:gravity="end|center"
        android:background="@color/destructive_red"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="@string/speakers_action_remove_listener"
        android:drawablePadding="@dimen/space_8"
        android:textAllCaps="true"
        android:drawableEnd="@drawable/ic_vector_trashcan_stroke"
        android:paddingStart="@dimen/space_24"
        android:paddingEnd="@dimen/space_24"
        app:drawableTint="@color/white" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/container_item"
        android:background="?coreColorAppBackground"
        android:paddingTop="@dimen/space_8"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <com.twitter.media.ui.image.UserImageView
            android:id="@id/image_avatar"
            android:layout_width="@dimen/avatar_size_speakers"
            android:layout_height="@dimen/avatar_size_speakers"
            android:layout_marginBottom="@dimen/space_8"
            android:scaleType="centerCrop"
            android:contentDescription="@null"
            android:layout_marginStart="@dimen/space_16"
            app:avatar_should_animate="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />
        <com.twitter.ui.user.MultilineUsernameView
            android:textSize="@dimen/font_size_normal"
            android:textStyle="bold"
            android:textColor="?coreColorPrimaryText"
            android:ellipsize="end"
            android:id="@id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_8"
            android:layout_marginEnd="@dimen/space_8"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toStartOf="@id/community_label"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@id/image_avatar"
            app:layout_constraintTop_toTopOf="parent" />
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_xsmall"
            android:textStyle="bold"
            android:textColor="?coreColorSecondaryText"
            android:id="@id/community_label"
            android:background="@drawable/bg_gray_rectangle"
            android:padding="@dimen/space_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginEnd="@dimen/space_16"
            app:layout_constraintBottom_toBottomOf="@id/text_name"
            app:layout_constraintEnd_toStartOf="@id/btn_action"
            app:layout_constraintStart_toEndOf="@id/text_name"
            app:layout_constraintTop_toTopOf="@id/text_name" />
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_normal"
            android:textColor="?coreColorSecondaryText"
            android:id="@id/text_handle"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:maxLines="1"
            app:layout_constraintEnd_toStartOf="@id/btn_action"
            app:layout_constraintStart_toStartOf="@id/text_name"
            app:layout_constraintTop_toBottomOf="@id/text_name" />
        <com.twitter.ui.components.button.legacy.TwitterButton
            android:id="@id/btn_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/speakers_action_remove_speaker"
            android:layout_marginEnd="@dimen/space_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/TwitterButtonMediumBrandOutlined" />
        <include
            android:id="@id/speaker_request_actions"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            android:layout_marginBottom="@dimen/space_8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/text_handle"
            app:layout_constraintTop_toBottomOf="@id/text_handle"
            layout="@layout/item_view_speaker_request_actions" />
        <View
            android:id="@id/_divider"
            android:background="?coreColorBorder"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <tag
        android:value="UserItem"
        android:id="@id/weaverComponent" />
</FrameLayout>