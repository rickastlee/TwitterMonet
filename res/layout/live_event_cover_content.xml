<?xml version="1.0" encoding="utf-8"?>
<merge
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:twitter="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@id/activity_live_event_metadata"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_12"
        android:layout_marginBottom="@dimen/space_4"
        android:layout_marginStart="@dimen/space_12"
        android:layout_marginEnd="@dimen/space_12">
        <androidx.constraintlayout.widget.Barrier
            android:id="@id/activity_live_event_cover_barrier_top"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            twitter:barrierDirection="top"
            twitter:constraint_referenced_ids="author_avatar, activity_live_event_cover_primary" />
        <com.twitter.media.ui.image.UserImageView
            android:id="@id/author_avatar"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            twitter:layout_constraintStart_toStartOf="parent"
            twitter:layout_constraintTop_toTopOf="parent"
            twitter:userImageSize="mini" />
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_normal"
            android:textStyle="bold"
            android:textColor="?coreColorPrimaryText"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@id/activity_live_event_cover_primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="@integer/single_line"
            android:layout_marginStart="@dimen/spacing_small"
            twitter:layout_constrainedWidth="true"
            twitter:layout_constraintBottom_toBottomOf="@id/activity_live_event_cover_barrier_bottom"
            twitter:layout_constraintEnd_toStartOf="@id/protected_item"
            twitter:layout_constraintHorizontal_bias="0.0"
            twitter:layout_constraintHorizontal_chainStyle="packed"
            twitter:layout_constraintStart_toEndOf="@id/author_avatar"
            twitter:layout_constraintTop_toTopOf="@id/activity_live_event_cover_barrier_top"
            twitter:layout_goneMarginStart="0.0dip" />
        <ImageView
            android:gravity="center_vertical"
            android:id="@id/protected_item"
            android:visibility="gone"
            android:layout_width="@dimen/font_size_normal"
            android:layout_height="@dimen/font_size_normal"
            android:src="?iconProtected"
            android:contentDescription="@string/icon_protected"
            android:layout_marginStart="@dimen/space_2"
            twitter:layout_constraintBottom_toBottomOf="@id/activity_live_event_cover_barrier_bottom"
            twitter:layout_constraintEnd_toStartOf="@id/verified_item"
            twitter:layout_constraintStart_toEndOf="@id/activity_live_event_cover_primary"
            twitter:layout_constraintTop_toTopOf="@id/activity_live_event_cover_barrier_top"
            twitter:layout_goneMarginStart="0.0dip"
            twitter:tint="?coreColorBadgeProtected" />
        <ImageView
            android:gravity="center_vertical"
            android:id="@id/verified_item"
            android:visibility="gone"
            android:layout_width="@dimen/font_size_normal"
            android:layout_height="@dimen/font_size_normal"
            android:src="?iconVerified"
            android:contentDescription="@string/icon_verified"
            android:layout_marginStart="@dimen/space_2"
            twitter:layout_constraintBottom_toBottomOf="@id/activity_live_event_cover_barrier_bottom"
            twitter:layout_constraintEnd_toStartOf="@id/activity_live_event_cover_divider"
            twitter:layout_constraintStart_toEndOf="@id/protected_item"
            twitter:layout_constraintTop_toTopOf="@id/activity_live_event_cover_barrier_top"
            twitter:layout_goneMarginStart="0.0dip"
            twitter:tint="?coreColorBadgeVerified" />
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_normal"
            android:textColor="?coreColorSecondaryText"
            android:gravity="center_vertical"
            android:id="@id/activity_live_event_cover_divider"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/live_events_sections_divider"
            android:maxLines="@integer/single_line"
            android:importantForAccessibility="no"
            android:layout_marginStart="@dimen/space_4"
            twitter:layout_constrainedWidth="true"
            twitter:layout_constraintBottom_toBottomOf="@id/activity_live_event_cover_barrier_bottom"
            twitter:layout_constraintEnd_toStartOf="@id/activity_live_event_cover_secondary"
            twitter:layout_constraintStart_toEndOf="@id/verified_item"
            twitter:layout_constraintTop_toTopOf="@id/activity_live_event_cover_barrier_top"
            twitter:layout_constraintWidth_max="wrap"
            twitter:layout_constraintWidth_min="@dimen/live_event_min_constraint"
            twitter:layout_goneMarginStart="@dimen/space_4" />
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_normal"
            android:textColor="?coreColorSecondaryText"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@id/activity_live_event_cover_secondary"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="@integer/single_line"
            android:layout_marginStart="@dimen/space_4"
            twitter:layout_constrainedWidth="true"
            twitter:layout_constraintBottom_toBottomOf="@id/activity_live_event_cover_barrier_bottom"
            twitter:layout_constraintEnd_toEndOf="parent"
            twitter:layout_constraintStart_toEndOf="@id/activity_live_event_cover_divider"
            twitter:layout_constraintTop_toTopOf="@id/activity_live_event_cover_barrier_top"
            twitter:layout_constraintWidth_max="wrap"
            twitter:layout_constraintWidth_min="@dimen/live_event_min_constraint"
            twitter:layout_goneMarginStart="@dimen/space_4" />
        <androidx.constraintlayout.widget.Barrier
            android:id="@id/activity_live_event_cover_barrier_bottom"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            twitter:barrierDirection="bottom"
            twitter:constraint_referenced_ids="author_avatar, activity_live_event_cover_primary" />
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_normal"
            android:textColor="?coreColorSecondaryText"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@id/activity_live_event_cover_date_time_stamp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_4"
            android:maxLines="@integer/single_line"
            twitter:layout_constraintStart_toStartOf="parent"
            twitter:layout_constraintTop_toBottomOf="@id/activity_live_event_cover_barrier_bottom"
            twitter:layout_goneMarginStart="0.0dip" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:textSize="@dimen/font_size_xlarge"
        android:textStyle="bold"
        android:id="@id/activity_live_event_cover_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_4"
        android:textDirection="anyRtl"
        android:layout_marginStart="@dimen/space_12"
        android:layout_marginEnd="@dimen/space_12" />
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:textSize="@dimen/font_size_normal"
        android:id="@id/activity_live_event_cover_description"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_12"
        android:textDirection="anyRtl"
        android:layout_marginStart="@dimen/space_12"
        android:layout_marginEnd="@dimen/space_12" />
    <ViewStub
        android:id="@id/reminder_button_stub"
        android:layout="@layout/live_event_reminder_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_12"
        android:layout_marginStart="@dimen/space_12" />
</merge>