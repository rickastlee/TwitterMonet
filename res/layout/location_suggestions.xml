<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@id/location_suggestions_container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:theme="@style/ThemeOverlay.Dialog.BottomSheet"
        android:id="@id/location_suggestions_bottom_sheet_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:behavior_hideable="true"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_large"
            android:textColor="?coreColorPrimaryText"
            android:id="@id/location_title_label"
            android:padding="@dimen/space_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_location"
            app:layout_constraintBottom_toTopOf="@id/location_title_bottom_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <com.twitter.ui.components.button.legacy.TwitterButton
            android:id="@id/remove_location_button"
            android:background="?selectableItemBackgroundBorderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remove"
            android:contentDescription="@string/remove_location"
            app:layout_constraintBottom_toBottomOf="@id/location_title_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/location_title_label"
            style="@style/TwitterButtonMediumBrandText" />
        <com.twitter.ui.components.button.legacy.TwitterButton
            android:id="@id/done_location_button"
            android:background="?selectableItemBackgroundBorderless"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/done"
            app:layout_constraintBottom_toBottomOf="@id/location_title_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/location_title_label"
            style="@style/TwitterButtonMediumBrandText" />
        <View
            android:id="@id/location_title_bottom_divider"
            android:background="@drawable/location_suggestions_divider"
            android:layout_width="0.0dip"
            android:layout_height="1.0px"
            app:layout_constraintTop_toBottomOf="@id/location_title_label" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@id/location_suggestions_list"
            android:clipToPadding="false"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/location_title_bottom_divider" />
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:id="@id/failure_primary_text"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/locations_loading_spinner"
            style="@style/CameraLocationSuggestionsError" />
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:id="@id/failure_secondary_text"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/failure_primary_text"
            style="@style/CameraLocationSuggestionsError" />
        <ProgressBar
            android:id="@id/locations_loading_spinner"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_24"
            android:indeterminate="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/location_title_bottom_divider"
            app:layout_constraintVertical_bias="0.25" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>