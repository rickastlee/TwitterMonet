<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="@dimen/media_rail_tile_size"
    android:layout_height="@dimen/media_rail_tile_size"
    android:layout_margin="@dimen/space_4"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:twitter="http://schemas.android.com/apk/res-auto">
    <com.twitter.media.ui.image.MediaImageView
        android:id="@id/media_rail_image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:foreground="@drawable/media_rail_item_bordered_foreground"
        android:contentDescription="@string/image_gallery"
        twitter:defaultDrawable="@drawable/rounded_placeholder_bg"
        twitter:scaleType="fill">
        <com.twitter.media.ui.image.RichImageView
            android:id="@id/image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop"
            android:contentDescription="@string/image_gallery"
            twitter:cornerRadius="@dimen/media_rail_corner_radius" />
    </com.twitter.media.ui.image.MediaImageView>
    <com.twitter.gallerygrid.widget.MediaBadgeOverlayView
        android:id="@id/media_rail_badge_overlay"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
</FrameLayout>