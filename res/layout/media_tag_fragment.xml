<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:twitter="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/tag_photo_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8.0dip"
            android:minHeight="40.0dip"
            android:paddingStart="10.0dip"
            android:paddingEnd="10.0dip">
            <LinearLayout
                android:orientation="horizontal"
                android:background="@drawable/bg_edit_text_bottom_bar"
                android:paddingBottom="6.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip">
                <ImageView
                    android:id="@id/search_icon"
                    android:layout_width="16.0dip"
                    android:layout_height="16.0dip"
                    android:layout_marginTop="3.0dip"
                    android:src="?iconSearch"
                    android:scaleType="fitCenter"
                    android:contentDescription="@null"
                    android:layout_marginEnd="2.0dip"
                    twitter:tint="?coreColorSecondaryText" />
                <com.twitter.ui.autocomplete.SuggestionEditText
                    android:textSize="@dimen/font_size_small"
                    android:textColor="?coreColorPrimaryText"
                    android:textColorHint="?coreColorSecondaryText"
                    android:id="@id/photo_tag_text"
                    android:background="@null"
                    android:padding="4.0dip"
                    android:focusableInTouchMode="true"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/media_tag_composer_hint"
                    android:scrollHorizontally="false"
                    android:includeFontPadding="false"
                    android:inputType="textMultiLine|textNoSuggestions"
                    android:imeOptions="flagNoExtractUi"
                    twitter:focusOnDismiss="true"
                    twitter:lengthThreshold="0" />
            </LinearLayout>
            <com.twitter.ui.components.text.legacy.TypefacesTextView
                android:textSize="@dimen/font_size_xsmall"
                android:textColor="?abstractColorDeepGray"
                android:id="@id/tags_remaining"
                android:paddingTop="4.0dip"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:id="@id/divider"
            android:background="?coreColorBorder"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/border_thickness" />
    </LinearLayout>
    <FrameLayout
        android:id="@id/tag_photo_body"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <View
            android:id="@id/drop_shadow"
            android:background="@drawable/tag_composer_shadow"
            android:layout_width="fill_parent"
            android:layout_height="6.0dip" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@id/suggestion_list_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            twitter:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            style="@style/List" />
    </FrameLayout>
</LinearLayout>