<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        android:id="@id/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/app_toolbar" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@id/items_recycler_view"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:importantForAccessibility="no"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toTopOf="@id/disclaimer_callout_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_chainStyle="packed" />
    <com.twitter.ui.components.inlinecallout.HorizonInlineCalloutView
        android:id="@id/disclaimer_callout_view"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_16"
        android:layout_marginStart="@dimen/space_16"
        android:layout_marginEnd="@dimen/space_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/items_recycler_view" />
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:gravity="center_horizontal"
        android:id="@id/empty_modules_text"
        android:paddingTop="@dimen/space_16"
        android:visibility="gone"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:text="@string/empty_modules_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        style="@style/ModuleOverviewMessageText" />
    <tag
        android:value="ModuleOverview"
        android:id="@id/weaverComponent" />
</androidx.constraintlayout.widget.ConstraintLayout>