<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="@drawable/list_row_background"
    android:padding="@dimen/moments_standard_spacing"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minHeight="@dimen/guide_category_min_height"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:twitter="http://schemas.android.com/apk/res-auto">
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:id="@id/primary_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        twitter:largeTextBoldOverride="false"
        style="@style/GuideText.Large.Primary" />
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:id="@id/secondary_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/GuideText.Small.Secondary" />
</LinearLayout>