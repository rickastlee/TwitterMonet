<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    android:id="@id/thumbnail_badge_container"
    android:background="@drawable/rounded_rectangle_dark_bg"
    android:padding="@dimen/guide_cell_thumbnail_badge_icon_padding"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@id/thumbnail_badge_img"
        android:layout_width="@dimen/guide_cell_thumbnail_badge_icon_size"
        android:layout_height="@dimen/guide_cell_thumbnail_badge_icon_size"
        android:scaleType="centerInside"
        android:contentDescription="@null"
        app:tint="@color/white" />
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:textSize="@dimen/font_size_xsmall"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@id/thumbnail_badge_text"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/guide_cell_thumbnail_badge_icon_size"
        android:includeFontPadding="false" />
</LinearLayout>