<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@drawable/card_border_with_rounded_corners"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/survey_container"
        android:padding="@dimen/space_12"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_normal"
            android:id="@id/question_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:largeTextBoldOverride="false" />
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_normal"
            android:id="@id/question_subtext"
            android:paddingTop="@dimen/space_8"
            android:paddingBottom="@dimen/space_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SecondaryText" />
        <FrameLayout
            android:id="@id/choice_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.twitter.ui.components.button.legacy.TwitterButton
            android:enabled="false"
            android:id="@id/next_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_16"
            android:text="@string/next"
            style="@style/TwitterButtonMediumBrandOutlined" />
        <com.twitter.ui.components.button.legacy.TwitterButton
            android:enabled="false"
            android:id="@id/done_button"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_16"
            android:text="@string/done"
            style="@style/TwitterButtonMediumBrandOutlined" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@id/thank_you_container"
        android:paddingLeft="@dimen/space_12"
        android:paddingTop="@dimen/space_24"
        android:paddingRight="@dimen/space_12"
        android:paddingBottom="@dimen/space_24"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_xlarge"
            android:layout_gravity="center"
            android:paddingBottom="@dimen/space_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/thank_you"
            style="@style/PrimaryText" />
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_normal"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/survey_subtext"
            android:textAlignment="center"
            style="@style/SecondaryText" />
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_normal"
            android:textColor="@color/twitter_blue"
            android:layout_gravity="center"
            android:id="@id/learn_more"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/learn_more"
            android:textAlignment="center" />
    </LinearLayout>
</LinearLayout>