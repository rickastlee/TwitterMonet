<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    style="@style/PollResultContainerStyle.Default"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.twitter.tfa.ui.theme.core.card.PollResultBarView
        android:id="@id/result_bar"
        style="@style/PollResultTopBarStyle.Default" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">
            <com.twitter.ui.components.text.legacy.TypefacesTextView
                android:id="@id/choice_text"
                style="@style/NativeCardsConsumerPollChoiceText.Default" />
        </LinearLayout>
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:id="@id/choice_percentage"
            style="@style/NativeCardsConsumerPollChoicePercentage.Default" />
    </LinearLayout>
</FrameLayout>