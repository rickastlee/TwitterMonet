<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:id="@id/nativecards_live_event_card_container"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:background="@color/black"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <include
            layout="@layout/nativecards_live_event_video" />
    </FrameLayout>
    <ViewStub
        android:id="@id/nativecards_live_event_social_proof_stub"
        android:layout="@layout/nativecards_live_event_social_proof"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/live_event_card_vertical_margin"
        android:layout_marginStart="@dimen/card_horizontal_margin"
        android:layout_marginEnd="@dimen/card_horizontal_margin" />
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:textSize="@dimen/font_size_small"
        android:textColor="?coreColorSecondaryText"
        android:ellipsize="end"
        android:id="@id/nativecards_live_event_card_category"
        android:paddingTop="@dimen/live_event_card_vertical_margin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:paddingStart="@dimen/card_horizontal_margin"
        android:paddingEnd="@dimen/card_horizontal_margin" />
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:textSize="@dimen/font_size_normal"
        android:textColor="?coreColorPrimaryText"
        android:ellipsize="end"
        android:id="@id/nativecards_live_event_card_text"
        android:paddingBottom="@dimen/live_event_card_vertical_margin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:paddingStart="@dimen/card_horizontal_margin"
        android:paddingEnd="@dimen/card_horizontal_margin" />
    <ViewStub
        android:id="@id/nativecards_live_event_reminder_button_stub"
        android:layout="@layout/nativecards_live_event_reminder_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
</LinearLayout>