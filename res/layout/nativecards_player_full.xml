<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:twitter="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/attribution"
        android:background="@drawable/bg_nativecards_clickable"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8.0dip"
        android:weightSum="1.0">
        <com.twitter.media.ui.fresco.FrescoMediaImageView
            android:layout_gravity="center_vertical"
            android:id="@id/site_image"
            android:layout_width="18.0dip"
            android:layout_height="18.0dip"
            android:contentDescription="@string/image_profile_default"
            android:layout_marginEnd="5.0dip"
            twitter:defaultDrawable="@drawable/drawable_color_placeholder_bg"
            twitter:errorDrawable="@drawable/bg_tweet_placeholder_photo_error" />
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_small"
            android:textStyle="bold"
            android:textColor="?coreColorPrimaryText"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:id="@id/site_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1.0dip"
            android:maxLines="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="top"
        android:orientation="vertical"
        android:id="@id/player_container"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0">
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_large"
            android:textColor="?coreColorPrimaryText"
            android:ellipsize="end"
            android:id="@id/title"
            android:background="@drawable/bg_nativecards_clickable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:maxLines="2"
            android:layout_marginEnd="@dimen/inset_medium"
            twitter:largeTextBoldOverride="false" />
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_small"
            android:textColor="?coreColorPrimaryText"
            android:ellipsize="end"
            android:id="@id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.0dip"
            android:maxLines="4" />
    </LinearLayout>
    <com.twitter.card.widget.CallToAction
        android:id="@id/call_to_action"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/TwitterButtonCardCallToAction" />
</LinearLayout>