<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    android:id="@id/card_container"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/guide_summary_card_thumbnail_size"
    android:baselineAligned="false"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:twitter="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:paddingStart="@dimen/card_horizontal_margin"
        android:paddingEnd="@dimen/card_horizontal_margin">
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_normal"
            android:textColor="?coreColorSecondaryText"
            android:ellipsize="end"
            android:id="@id/card_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <com.twitter.ui.widget.DownscaleAutoFittingTextView
                android:textSize="@dimen/font_size_normal"
                android:ellipsize="end"
                android:id="@id/card_text"
                android:layout_width="wrap_content"
                android:layout_height="0.0dip"
                android:maxLines="3"
                android:layout_weight="1.0"
                twitter:fittingStrategy="decreaseMaxLines" />
            <com.twitter.ui.components.text.legacy.TypefacesTextView
                android:textSize="@dimen/font_size_normal"
                android:textColor="?coreColorSecondaryText"
                android:ellipsize="end"
                android:id="@id/card_summary"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="?coreColorBorder"
        android:layout_width="@dimen/border_thickness"
        android:layout_height="@dimen/guide_summary_card_thumbnail_size" />
    <com.twitter.media.ui.fresco.FrescoMediaImageView
        android:id="@id/card_image"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/guide_summary_card_thumbnail_size"
        android:contentDescription="@string/image_profile_default"
        twitter:defaultDrawable="@drawable/drawable_color_placeholder_bg"
        twitter:errorDrawable="@drawable/bg_tweet_placeholder_photo_error"
        twitter:scaleType="fill">
        <com.twitter.media.ui.fresco.FrescoDraweeView
            android:id="@id/image"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/guide_summary_card_thumbnail_size"
            twitter:roundBottomStart="false"
            twitter:roundTopStart="false"
            twitter:roundedCornerRadius="@dimen/card_inner_corner_radius"
            twitter:viewAspectRatio="1.0" />
    </com.twitter.media.ui.fresco.FrescoMediaImageView>
</LinearLayout>