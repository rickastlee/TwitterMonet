<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:paddingTop="@dimen/space_16"
    android:paddingBottom="@dimen/space_4"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:paddingStart="@dimen/space_12"
    android:paddingEnd="@dimen/space_16"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@id/card_image_fill"
        android:layout_width="@dimen/non_native_card_image"
        android:layout_height="@dimen/non_native_card_image"
        fresco:actualImageScaleType="centerCrop"
        fresco:roundedCornerRadius="@dimen/corner_radius_medium" />
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@id/card_image_fit"
        android:layout_width="@dimen/non_native_card_image"
        android:layout_height="@dimen/non_native_card_image"
        fresco:actualImageScaleType="centerInside" />
</FrameLayout>