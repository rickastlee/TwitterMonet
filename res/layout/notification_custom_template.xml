<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:theme="@style/ThemeBase"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/notification_content_padding"
        android:layout_width="@dimen/notification_weight"
        android:layout_height="wrap_content"
        android:layout_weight="1.0">
        <include
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/notification_custom_text_group_template" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/notification_weight"
        android:layout_height="fill_parent"
        android:layout_weight="1.0">
        <include
            layout="@layout/notification_custom_image_template" />
    </LinearLayout>
</LinearLayout>