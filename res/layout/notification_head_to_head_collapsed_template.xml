<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:theme="@style/ThemeBase.Notification"
    android:orientation="horizontal"
    android:clipChildren="false"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="3.0">
        <TextView
            android:textSize="@dimen/font_size_normal"
            android:textStyle="bold"
            android:textColor="@color/destructive_red"
            android:id="@id/event_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/font_size_normal"
            android:textStyle="bold"
            android:textColor="@color/notification_text_black"
            android:id="@id/time_divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notification_header_divider_symbol"
            android:layout_marginStart="@dimen/space_4"
            android:layout_marginEnd="@dimen/space_4" />
        <TextView
            android:textSize="@dimen/font_size_normal"
            android:textStyle="bold"
            android:textColor="@color/notification_text_black"
            android:ellipsize="end"
            android:id="@id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="1" />
    </LinearLayout>
    <FrameLayout
        android:id="@id/team_1_logo_container"
        android:layout_width="@dimen/notification_image_size_32"
        android:layout_height="@dimen/notification_image_size_32">
        <ImageView
            android:id="@id/team_1_logo_color"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/team_1_color_bar_collapsed"
            android:contentDescription="@null" />
        <ImageView
            android:layout_gravity="center"
            android:id="@id/team_1_logo"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:contentDescription="@null" />
    </FrameLayout>
    <FrameLayout
        android:id="@id/team_2_logo_container"
        android:layout_width="@dimen/notification_image_size_32"
        android:layout_height="@dimen/notification_image_size_32">
        <ImageView
            android:id="@id/team_2_logo_color"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/team_2_color_bar_collapsed"
            android:contentDescription="@null" />
        <ImageView
            android:layout_gravity="center"
            android:id="@id/team_2_logo"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:contentDescription="@null" />
    </FrameLayout>
</LinearLayout>