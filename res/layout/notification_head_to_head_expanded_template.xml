<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:theme="@style/ThemeBase.Notification"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:textSize="@dimen/font_size_normal"
        android:textColor="@color/notification_text_black"
        android:ellipsize="end"
        android:id="@id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/font_size_normal"
            android:textStyle="bold"
            android:textColor="@color/notification_text_black_opacity_50"
            android:id="@id/league_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            android:layout_marginBottom="@dimen/space_8"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/space_8"
            android:layout_alignParentStart="true" />
        <TextView
            android:textSize="@dimen/font_size_normal"
            android:textStyle="bold"
            android:textColor="@color/destructive_red"
            android:id="@id/event_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            android:layout_marginBottom="@dimen/space_8"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/space_8"
            android:layout_toStartOf="@id/time_divider" />
        <TextView
            android:textSize="@dimen/font_size_normal"
            android:textColor="@color/notification_text_black_opacity_50"
            android:id="@id/time_divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            android:layout_marginBottom="@dimen/space_8"
            android:text="@string/notification_header_divider_symbol"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/space_4"
            android:layout_toStartOf="@id/event_segment" />
        <TextView
            android:textSize="@dimen/font_size_normal"
            android:textStyle="bold"
            android:textColor="@color/notification_text_black_opacity_50"
            android:id="@id/event_segment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            android:layout_marginBottom="@dimen/space_8"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/space_4"
            android:layout_marginEnd="@dimen/space_4"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/rounded_rectangle_text_border"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@id/score_card_row_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@id/team_1_logo_color"
                android:layout_width="10.0dip"
                android:layout_height="@dimen/notification_image_size_48"
                android:src="@drawable/team_1_color_bar_expanded"
                android:contentDescription="@null" />
            <ImageView
                android:id="@id/team_1_logo"
                android:layout_width="@dimen/notification_image_size_48"
                android:layout_height="@dimen/notification_image_size_48"
                android:contentDescription="@null"
                android:layout_toEndOf="@id/team_1_logo_color" />
            <TextView
                android:textSize="@dimen/font_size_normal"
                android:textStyle="bold"
                android:textColor="@color/notification_text_black"
                android:ellipsize="end"
                android:id="@id/team_1_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8"
                android:layout_marginBottom="@dimen/space_8"
                android:layout_toLeftOf="@id/team_1_score"
                android:layout_toRightOf="@id/team_1_logo"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/space_8"
                android:layout_marginEnd="@dimen/space_8"
                android:layout_toEndOf="@id/team_1_logo" />
            <TextView
                android:textSize="@dimen/font_size_normal"
                android:textStyle="bold"
                android:textColor="@color/notification_text_black"
                android:id="@id/team_1_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8"
                android:layout_marginBottom="@dimen/space_8"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/space_8"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@id/score_card_row_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@id/team_2_logo_color"
                android:layout_width="10.0dip"
                android:layout_height="@dimen/notification_image_size_48"
                android:src="@drawable/team_2_color_bar_expanded"
                android:contentDescription="@null" />
            <ImageView
                android:id="@id/team_2_logo"
                android:layout_width="@dimen/notification_image_size_48"
                android:layout_height="@dimen/notification_image_size_48"
                android:contentDescription="@null"
                android:layout_toEndOf="@id/team_2_logo_color" />
            <TextView
                android:textSize="@dimen/font_size_normal"
                android:textStyle="bold"
                android:textColor="@color/notification_text_black"
                android:ellipsize="end"
                android:id="@id/team_2_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8"
                android:layout_marginBottom="@dimen/space_8"
                android:layout_toLeftOf="@id/team_2_score"
                android:layout_toRightOf="@id/team_2_logo"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/space_8"
                android:layout_marginEnd="@dimen/space_8"
                android:layout_toEndOf="@id/team_2_logo" />
            <TextView
                android:textSize="@dimen/font_size_normal"
                android:textStyle="bold"
                android:textColor="@color/notification_text_black"
                android:id="@id/team_2_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8"
                android:layout_marginBottom="@dimen/space_8"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/space_8"
                android:layout_alignParentEnd="true" />
            <TextView
                android:background="@color/gray_200_opacity_30"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip" />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:textSize="@dimen/font_size_normal"
        android:textColor="@color/notification_text_black"
        android:id="@id/event_description"
        android:paddingTop="@dimen/space_4"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
</LinearLayout>