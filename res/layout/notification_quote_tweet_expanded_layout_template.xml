<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:textSize="@dimen/font_size_normal"
        android:textStyle="bold"
        android:textColor="@color/notification_text_black"
        android:id="@id/tweet_context"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_4"
        android:fontFamily="@string/sans_serif_light" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_4">
        <TextView
            android:textSize="@dimen/font_size_normal"
            android:textStyle="bold"
            android:textColor="@color/notification_text_black"
            android:id="@id/tweet_title"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:fontFamily="@string/sans_serif_light"
            android:layout_marginEnd="@dimen/space_8" />
        <ImageView
            android:id="@id/tweet_profile_image"
            android:layout_width="@dimen/notification_image_size_32"
            android:layout_height="@dimen/notification_image_size_32"
            android:contentDescription="@null" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_2"
            android:layout_marginBottom="@dimen/space_4">
            <TextView
                android:textSize="@dimen/font_size_normal"
                android:textColor="@color/notification_text_black"
                android:ellipsize="end"
                android:id="@id/tweet_text"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:layout_weight="1.0" />
            <ImageView
                android:id="@id/tweet_image"
                android:background="@drawable/rounded_rectangle_transparent_border"
                android:layout_width="@dimen/notification_image_size_64"
                android:layout_height="@dimen/notification_image_size_64"
                android:scaleType="fitXY"
                android:contentDescription="@null"
                android:layout_marginStart="@dimen/space_8"
                android:clipToOutline="true" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@id/quote_tweet_layout"
            android:background="@drawable/rounded_rectangle_text_border"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_4"
            android:layout_marginBottom="@dimen/space_4">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_4"
                android:layout_marginBottom="@dimen/space_4"
                android:layout_marginStart="@dimen/space_8"
                android:layout_marginEnd="@dimen/space_8">
                <ImageView
                    android:id="@id/quote_tweet_profile_image"
                    android:layout_width="@dimen/notification_image_size_16"
                    android:layout_height="@dimen/notification_image_size_16"
                    android:scaleType="fitXY"
                    android:contentDescription="@null"
                    android:layout_marginEnd="@dimen/space_4" />
                <TextView
                    android:textSize="@dimen/font_size_small"
                    android:textStyle="bold"
                    android:textColor="@color/notification_text_black"
                    android:id="@id/quote_tweet_profile_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_marginEnd="@dimen/space_2" />
                <TextView
                    android:textSize="@dimen/font_size_small"
                    android:textColor="@color/notification_text_black_opacity_50"
                    android:id="@id/quote_tweet_profile_handle_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1" />
                <TextView
                    android:textSize="@dimen/font_size_small"
                    android:textColor="@color/notification_text_black_opacity_50"
                    android:id="@id/quote_tweet_profile_divider_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dot"
                    android:layout_marginStart="@dimen/space_2"
                    android:layout_marginEnd="@dimen/space_2" />
                <TextView
                    android:textSize="@dimen/font_size_small"
                    android:textColor="@color/notification_text_black_opacity_50"
                    android:id="@id/quote_tweet_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_4"
                android:layout_marginStart="@dimen/space_8"
                android:layout_marginEnd="@dimen/space_8">
                <ImageView
                    android:id="@id/quote_tweet_image"
                    android:background="@drawable/rounded_rectangle_transparent_border"
                    android:layout_width="@dimen/notification_image_size_64"
                    android:layout_height="@dimen/notification_image_size_64"
                    android:scaleType="fitXY"
                    android:contentDescription="@null"
                    android:layout_marginEnd="@dimen/space_8"
                    android:clipToOutline="true" />
                <TextView
                    android:textSize="@dimen/font_size_small"
                    android:textColor="@color/notification_text_black"
                    android:ellipsize="end"
                    android:id="@id/quote_tweet_text"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:layout_weight="1.0" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>