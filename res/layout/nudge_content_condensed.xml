<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@id/nudge_content_condensed"
    android:padding="@dimen/space_12"
    android:visibility="gone"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@id/icon"
        android:layout_width="@dimen/space_24"
        android:layout_height="@dimen/space_24"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:textSize="@dimen/font_size_normal"
        android:textColor="?coreColorPrimaryText"
        android:id="@id/text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/space_12"
        android:layout_toStartOf="@id/feedback_cta"
        android:layout_toEndOf="@id/icon" />
    <com.twitter.ui.widget.TintableImageView
        android:id="@id/feedback_cta"
        android:background="?android:selectableItemBackgroundBorderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_vector_information_circle"
        android:layout_centerVertical="true"
        android:contentDescription="@string/learn_more"
        android:layout_alignParentEnd="true"
        custom:tint="?textColorSecondary" />
</RelativeLayout>