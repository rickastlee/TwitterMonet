<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <com.twitter.ui.widget.TwitterIndeterminateProgressSpinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TwitterIndeterminateProgressSpinnerBig" />
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_large"
            android:textColor="?coreColorPrimaryText"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ocf_standard_spacing"
            android:text="@string/ocf_dialog_loading" />
    </LinearLayout>
</FrameLayout>