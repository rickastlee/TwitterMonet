<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@id/ocf_separator_divider_1"
        android:layout_width="0.0dip"
        android:layout_height="@dimen/ocf_button_separator_divider_height"
        android:layout_marginTop="@dimen/ocf_standard_spacing"
        android:layout_marginBottom="@dimen/ocf_standard_spacing"
        android:layout_marginStart="@dimen/ocf_button_separator_divider_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ocf_separator_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/OcfSeparatorDivider" />
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:id="@id/ocf_separator_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ocf_button_separator_text_margin"
        android:layout_marginEnd="@dimen/ocf_button_separator_text_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ocf_separator_divider_2"
        app:layout_constraintStart_toEndOf="@id/ocf_separator_divider_1"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/OcfSeparatorText" />
    <View
        android:id="@id/ocf_separator_divider_2"
        android:layout_width="0.0dip"
        android:layout_height="@dimen/ocf_button_separator_divider_height"
        android:layout_marginTop="@dimen/ocf_standard_spacing"
        android:layout_marginBottom="@dimen/ocf_standard_spacing"
        android:layout_marginEnd="@dimen/ocf_button_separator_divider_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ocf_separator_text"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/OcfSeparatorDivider" />
</androidx.constraintlayout.widget.ConstraintLayout>