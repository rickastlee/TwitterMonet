<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="start"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingHorizontal="@dimen/ocf_screen_padding_wide"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include
        android:layout_width="fill_parent"
        android:layout_height="?toolBarSize"
        layout="@layout/ocf_top_toolbar" />
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0">
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <com.twitter.ui.components.text.legacy.TypefacesTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ocf_standard_spacing"
                android:layout_marginBottom="@dimen/ocf_double_standard_spacing"
                android:text="@string/signup_welcome"
                style="@style/OcfTitle1Text" />
            <com.twitter.ui.components.button.legacy.TwitterButton
                android:id="@id/cta_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ocf_standard_spacing"
                android:text="@string/signup_start"
                style="@style/TwitterButtonLargeBrandFilled" />
        </LinearLayout>
    </FrameLayout>
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:gravity="center_vertical"
        android:id="@id/sign_in_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ocf_double_standard_spacing"
        android:layout_marginBottom="@dimen/ocf_standard_spacing"
        android:minHeight="48.0dip"
        android:text="@string/signup_splash_sign_in"
        style="@style/OcfBodyText" />
</LinearLayout>