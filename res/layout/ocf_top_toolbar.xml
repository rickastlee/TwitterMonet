<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="?toolBarSize"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ocf_standard_spacing"
        layout="@layout/ocf_twitter_logo" />
    <ImageButton
        android:gravity="start|center"
        android:id="@id/back_button"
        android:background="@null"
        android:padding="@dimen/ocf_standard_spacing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="@drawable/ripple_selector_oval"
        android:src="@drawable/ic_ocf_back_button"
        android:scaleType="center"
        android:contentDescription="@string/back"
        app:tint="?coreColorPrimaryText" />
</FrameLayout>