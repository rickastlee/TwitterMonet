<?xml version="1.0" encoding="utf-8"?>
<com.twitter.android.liveevent.ui.SimplePeriscopeBadge
    android:id="@id/periscope_badge_container"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:textSize="@dimen/font_size_xsmall"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:id="@id/periscope_status_text"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:includeFontPadding="false"
        android:paddingStart="6.0dip"
        android:paddingEnd="6.0dip"
        android:layout_marginEnd="1.0px" />
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:textSize="@dimen/font_size_xsmall"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:id="@id/periscope_viewer_text"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:includeFontPadding="false"
        android:drawablePadding="@dimen/bg_media_badge_padding"
        android:paddingStart="5.0dip"
        android:paddingEnd="5.0dip" />
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:textSize="@dimen/font_size_xsmall"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:id="@id/periscope_debug_text"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:includeFontPadding="false"
        android:drawablePadding="@dimen/bg_media_badge_padding"
        android:paddingStart="5.0dip"
        android:paddingEnd="5.0dip" />
</com.twitter.android.liveevent.ui.SimplePeriscopeBadge>