<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6.0dip"
    android:layout_marginStart="@dimen/ps__chat_container_spacing"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:twitter="http://schemas.android.com/apk/res-auto">
    <com.twitter.media.ui.image.UserImageView
        android:id="@id/user_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        twitter:userImageSize="@dimen/ps__chat_avatar_size" />
    <LinearLayout
        android:orientation="vertical"
        android:paddingBottom="4.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/ps__chat_avatar_size"
        android:paddingStart="@dimen/ps__chat_container_spacing"
        android:layout_marginEnd="@dimen/ps__chat_layout_margin_end">
        <tv.periscope.android.view.PsTextView
            android:textSize="@dimen/font_size_normal"
            android:textStyle="bold"
            android:textColor="@color/ps__white"
            android:id="@id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4.0dip" />
        <tv.periscope.android.view.PsTextView
            android:textSize="@dimen/font_size_xsmall"
            android:textColor="@color/ps__white"
            android:id="@id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ps__chat_container_spacing" />
        <LinearLayout
            android:orientation="horizontal"
            android:id="@id/follow_prompt_actions_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>