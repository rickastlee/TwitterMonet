<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:id="@id/dialog_panel"
    android:background="?coreColorAppBackgroundTranslucent"
    android:clipChildren="false"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:twitter="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_gravity="start|center"
        android:id="@id/button_dismiss"
        android:padding="@dimen/space_16"
        android:layout_width="@dimen/space_48"
        android:layout_height="@dimen/space_48"
        android:layout_margin="@dimen/space_4"
        android:src="@drawable/ic_vector_close_nomargin"
        android:contentDescription="@string/cancel"
        twitter:tint="?textColorPrimary" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="42.0">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@id/logo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/prompt_one_line_height"
            android:contentDescription="@null"
            twitter:srcCompat="@drawable/ic_vector_twitter"
            twitter:tint="?textColorPrimary" />
        <ImageView
            android:id="@id/dialog_icon"
            android:visibility="gone"
            android:layout_width="0.0dip"
            android:layout_height="0.0dip"
            android:contentDescription="@null" />
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_gravity="center"
            android:id="@id/dialog_icon_media"
            android:visibility="gone"
            android:layout_width="0.0dip"
            android:layout_height="0.0dip"
            android:contentDescription="@null"
            twitter:scaleType="centerInside" />
    </LinearLayout>
    <RelativeLayout
        android:orientation="vertical"
        android:clipChildren="false"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="42.0">
        <com.twitter.ui.components.button.legacy.TwitterButton
            android:id="@id/button_positive"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/button_negative"
            android:layout_centerHorizontal="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_marginHorizontal="@dimen/space_24"
            style="@style/TwitterButtonLargePrimaryFilled" />
        <com.twitter.ui.components.button.legacy.TwitterButton
            android:id="@id/button_negative"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/prompt_between_button_margin"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="@dimen/space_24"
            style="@style/TwitterButtonLargePrimaryOutlined" />
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textColor="?coreColorPrimaryText"
            android:id="@id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingStart="@dimen/prompt_fullscreen_text_padding_horizontal"
            android:paddingEnd="@dimen/prompt_fullscreen_text_padding_horizontal"
            style="@style/PromptText" />
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textColor="?coreColorPrimaryText"
            android:id="@id/dialog_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_title"
            style="@style/PromptDescriptionText" />
    </RelativeLayout>
    <View
        android:visibility="invisible"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="8.0" />
</LinearLayout>