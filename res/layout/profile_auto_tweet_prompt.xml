<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/black"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:twitter="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:id="@id/top_bar"
        android:background="@drawable/bg_dark_to_clear_gradient_reverse"
        android:padding="5.0dip"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/edit_image_toolbar_height"
        android:layout_alignParentTop="true">
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center|left"
            android:id="@id/back"
            android:background="@drawable/actionbar_item_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@id/enhanced_flow_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_vector_close"
                android:contentDescription="@string/button_exit"
                twitter:tint="@color/white" />
            <com.twitter.ui.components.text.legacy.TypefacesTextView
                android:textSize="@dimen/font_size_large"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@id/header_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_preview_tweet_title"
                android:layout_marginStart="2.0dip" />
        </LinearLayout>
    </FrameLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:layout_above="@id/footer_content"
        android:layout_below="@id/top_bar">
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@null"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/profile_photo_prompt_horizontal_margin"
            android:layout_marginEnd="@dimen/profile_photo_prompt_horizontal_margin">
            <View
                android:background="@null"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0" />
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/profile_tweet_preview_prompt_card_corner_background"
                android:paddingTop="@dimen/profile_photo_prompt_padding"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/profile_photo_prompt_padding"
                android:paddingEnd="@dimen/profile_photo_prompt_padding">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.twitter.media.ui.image.UserImageView
                        android:id="@id/profile_image"
                        android:clickable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/profile_photo_prompt_small_spacing"
                        twitter:imageType="profile" />
                    <com.twitter.ui.tweet.TweetHeaderView
                        android:id="@id/header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TweetHeaderView.ProfilePreviewPrompt" />
                </LinearLayout>
                <com.twitter.ui.components.text.legacy.TypefacesTextView
                    android:id="@id/tweet_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/profile_photo_prompt_small_spacing"
                    android:layout_marginBottom="@dimen/profile_photo_prompt_small_spacing" />
                <com.twitter.media.ui.image.AspectRatioFrameLayout
                    android:id="@id/image_container"
                    android:paddingBottom="@dimen/profile_photo_prompt_small_spacing"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <com.twitter.media.ui.fresco.FrescoDraweeView
                        android:id="@id/image"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        twitter:roundedCornerRadius="@dimen/profile_photo_prompt_corner_radius" />
                </com.twitter.media.ui.image.AspectRatioFrameLayout>
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:src="@drawable/linear_layout_divider"
                    android:contentDescription="Divider" />
                <Button
                    android:textColor="?abstractColorDeepGray"
                    android:layout_gravity="center"
                    android:id="@id/edit"
                    android:background="@null"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/edit"
                    android:textAllCaps="true"
                    style="@style/Widget.Twitter.Button" />
            </LinearLayout>
            <View
                android:background="@null"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0" />
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@id/footer_content"
        android:padding="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="56.0dip"
        android:layout_alignParentBottom="true">
        <com.twitter.ui.components.button.legacy.TwitterButton
            android:id="@id/not_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/not_now"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            twitter:fillColor="@null"
            twitter:labelColor="@color/white"
            style="@style/TwitterButtonMediumBrandText" />
        <com.twitter.ui.components.button.legacy.TwitterButton
            android:id="@id/tweet_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/post_tweet"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            style="@style/TwitterButtonMediumBrandFilled" />
    </RelativeLayout>
</RelativeLayout>