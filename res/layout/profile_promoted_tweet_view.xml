<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include
        android:id="@id/top_divider"
        layout="@layout/section_divider" />
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:id="@id/title"
        android:text="@string/promoted_tweet"
        style="@style/SectionHeader.Profile.SuggestedHeader" />
    <View
        android:background="?coreColorBorder"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/border_thickness" />
    <FrameLayout
        android:id="@id/tweet_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <include
        android:id="@id/bottom_divider"
        layout="@layout/section_divider" />
</LinearLayout>