<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:gravity="center_vertical"
    android:id="@id/text_row_container"
    android:background="?android:selectableItemBackground"
    android:paddingTop="8.0dip"
    android:paddingBottom="8.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="locale"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <tv.periscope.android.view.PsImageView
        android:id="@id/icon"
        android:background="@drawable/ps__bg_audience_icon_grey"
        android:padding="2.0dip"
        android:layout_width="@dimen/ps__avatar_size"
        android:layout_height="@dimen/ps__avatar_size"
        android:scaleType="center"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/ps__standard_spacing_16"
        android:layout_marginEnd="@dimen/ps__standard_spacing_16" />
    <tv.periscope.android.view.PsCheckButton
        android:id="@id/check"
        android:visibility="gone"
        android:layout_margin="8.0dip"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        style="@style/ps__IconButton" />
    <tv.periscope.android.view.PsTextView
        android:theme="@style/ps__AudienceSelectionRow"
        android:id="@id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/check"
        android:layout_toEndOf="@id/icon" />
</RelativeLayout>