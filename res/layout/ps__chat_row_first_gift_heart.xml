<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="6.0dip"
    android:layout_marginStart="@dimen/ps__chat_container_spacing"
    android:layout_marginEnd="@dimen/ps__chat_container_spacing"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/chat_message_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/ps__chat_avatar_size">
        <RelativeLayout
            android:orientation="vertical"
            android:id="@id/chat_text_container"
            android:background="@drawable/ps__bg_first_gift_heart"
            android:paddingTop="4.0dip"
            android:paddingBottom="4.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/ps__chat_avatar_size"
            android:paddingStart="8.0dip"
            android:paddingEnd="10.0dip">
            <tv.periscope.android.view.PsTextView
                android:textSize="12.0sp"
                android:textColor="@color/ps__white"
                android:id="@id/first_super_heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ps__chat_super_heart_first_super_heart"
                android:layout_alignParentStart="true" />
            <tv.periscope.android.view.PsTextView
                android:textSize="16.0sp"
                android:textStyle="bold"
                android:textColor="@color/ps__white"
                android:id="@id/thanks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.0dip"
                android:text="@string/ps__chat_super_heart_thanks"
                android:layout_below="@id/first_super_heart" />
            <tv.periscope.android.view.PsTextView
                android:textSize="16.0sp"
                android:textStyle="bold"
                android:textColor="@color/ps__white"
                android:id="@id/thank_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="180.0dip"
                android:layout_alignTop="@id/thanks"
                android:layout_marginStart="@dimen/ps__standard_spacing_5"
                android:layout_toEndOf="@id/thanks" />
        </RelativeLayout>
        <tv.periscope.android.view.MaskImageView
            android:id="@id/masked_avatar"
            android:background="@drawable/ps__bg_avatar_first_gift_heart"
            android:layout_width="@dimen/ps__chat_avatar_size"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop"
            android:minHeight="@dimen/ps__chat_avatar_size" />
    </LinearLayout>
</RelativeLayout>