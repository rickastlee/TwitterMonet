<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:padding="10.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <tv.periscope.android.view.PsTextView
        android:textSize="16.0sp"
        android:textColor="@color/ps__white"
        android:id="@id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ps__broadcast_title" />
    <tv.periscope.android.view.PsEditText
        android:textSize="20.0sp"
        android:textColor="@color/ps__white"
        android:id="@id/broadcast_title"
        android:background="@drawable/ps__rounded_corner_edittext"
        android:padding="10.0dip"
        android:focusable="auto"
        android:focusableInTouchMode="true"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10.0dip"
        android:hint="@string/ps__broadcast_title"
        android:maxLines="3"
        android:textCursorDrawable="@drawable/ps__bg_cursor_white" />
    <tv.periscope.android.view.PsTextView
        android:textSize="@dimen/ps__standard_text_size"
        android:textColor="@color/ps__white_alpha_half"
        android:layout_gravity="center_horizontal"
        android:id="@id/broadcast_title_editing_disabled_limit_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ps__standard_spacing_10"
        android:layout_marginBottom="@dimen/ps__standard_spacing_10"
        android:text="@string/ps__broadcast_title_editing_disabled_limit_message" />
</LinearLayout>