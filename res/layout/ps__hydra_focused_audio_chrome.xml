<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:visibility="gone"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@id/hydra_audio_background_image"
        android:background="@color/black"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:contentDescription="@null" />
    <View
        android:id="@id/hydra_audio_background_overlay"
        android:background="@color/ps__dark_grey"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:alpha="@dimen/ps__hydra_audio_background_overlay_alpha" />
    <tv.periscope.android.hydra.HydraAudioIndicatingProfileImage
        android:layout_gravity="center"
        android:id="@id/hydra_audio_profile_image"
        android:layout_width="@dimen/ps__hydra_stream_container_large_height"
        android:layout_height="@dimen/ps__hydra_stream_container_large_height"
        android:contentDescription="@null" />
</FrameLayout>