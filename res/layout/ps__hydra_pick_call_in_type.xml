<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:background="@color/ps__black_70"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_gravity="bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <tv.periscope.android.view.PsTextView
            android:textSize="@dimen/font_size_xlarge"
            android:textStyle="bold"
            android:textColor="@color/ps__white"
            android:gravity="center"
            android:id="@id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ps__hydra_pick_call_in_join_as_guest"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <tv.periscope.android.view.PsTextView
            android:textSize="@dimen/font_size_normal"
            android:textColor="@color/ps__white"
            android:gravity="center"
            android:id="@id/description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ps__standard_spacing_20"
            android:text="@string/ps__hydra_pick_call_in_type_wait_for_broadcaster_accept"
            android:lines="4"
            android:layout_marginStart="@dimen/ps__standard_spacing_30"
            android:layout_marginEnd="@dimen/ps__standard_spacing_30"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title" />
        <tv.periscope.android.view.SquareCardView
            android:id="@id/audio_container"
            android:layout_width="@dimen/ps__hydra_pick_call_in_type_option_icon_size"
            android:layout_height="@dimen/ps__hydra_pick_call_in_type_option_icon_size"
            android:layout_marginTop="@dimen/ps__standard_spacing_60"
            app:cardCornerRadius="@dimen/ps__hydra_stream_container_radius"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/description">
            <tv.periscope.android.hydra.HydraAudioIndicatingProfileImage
                android:layout_gravity="center"
                android:id="@id/profile_image"
                android:padding="@dimen/ps__standard_spacing_16"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:contentDescription="@string/ps__hydra_accessibility_audio_icon" />
        </tv.periscope.android.view.SquareCardView>
        <tv.periscope.android.view.PsTextView
            android:textSize="@dimen/font_size_xsmall"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:id="@id/audio_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ps__standard_spacing_16"
            android:text="@string/ps__hydra_microphone_only"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/audio_container"
            app:layout_goneMarginTop="0.0dip" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:gravity="center"
            android:id="@id/btn_action"
            android:background="@drawable/ps__rounded_rect_button_background"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/ps__standard_spacing_40"
            android:layout_marginTop="@dimen/ps__standard_spacing_50"
            android:layout_marginStart="@dimen/ps__dialog_content_padding"
            android:layout_marginEnd="@dimen/ps__dialog_content_padding"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/audio_description">
            <ImageView
                android:id="@id/action_icon"
                android:layout_width="wrap_content"
                android:layout_height="0.0dip"
                android:contentDescription="@null"
                app:layout_constraintBottom_toBottomOf="@id/action_text"
                app:layout_constraintEnd_toStartOf="@id/action_text"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/action_text" />
            <tv.periscope.android.view.PsTextView
                android:textSize="@dimen/ps__hydra_pick_call_in_type_normal_text_size"
                android:textColor="@color/ps__white"
                android:id="@id/action_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ps__hydra_pick_call_in_join"
                android:textAlignment="center"
                android:layout_marginStart="@dimen/ps__standard_spacing_16"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/action_icon"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@id/notify_followers"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ps__dialog_content_padding"
            app:layout_constraintBottom_toTopOf="@id/done"
            app:layout_constraintTop_toBottomOf="@id/btn_action">
            <tv.periscope.android.view.PsTextView
                android:textSize="@dimen/font_size_normal"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@id/notify_followers_label"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/ps__twitter_twitter_label_height"
                android:text="@string/ps__hydra_notify_my_followers_label" />
            <tv.periscope.android.hydra.TwitterCheckButton
                android:id="@id/twitter_check_button"
                android:layout_width="@dimen/ps__twitter_check_button_size"
                android:layout_height="@dimen/ps__twitter_check_button_size"
                android:layout_marginStart="@dimen/ps__standard_spacing_16" />
        </LinearLayout>
        <View
            android:id="@id/divider"
            android:background="@color/white_opacity_50"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            app:layout_constraintBottom_toTopOf="@id/done" />
        <tv.periscope.android.view.PsTextView
            android:textSize="@dimen/ps__hydra_pick_call_in_type_normal_text_size"
            android:textStyle="bold"
            android:textColor="@color/white_opacity_50"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@id/done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ps__standard_spacing_20"
            android:minWidth="@dimen/ps__min_touch_target_size"
            android:minHeight="@dimen/ps__min_touch_target_size"
            android:text="@string/ps__hydra_pick_call_in_type_done"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
        <tv.periscope.android.view.PsButton
            android:textColor="@color/ps__white"
            android:gravity="center"
            android:id="@id/btn_cancel"
            android:background="@drawable/ps__rounded_rect_button_background"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/ps__standard_spacing_40"
            android:layout_marginTop="@dimen/ps__standard_spacing_16"
            android:layout_marginBottom="@dimen/ps__standard_spacing_30"
            android:text="@string/ps__hydra_pick_call_in_cancel"
            android:textAlignment="center"
            android:layout_marginStart="@dimen/ps__dialog_content_padding"
            android:layout_marginEnd="@dimen/ps__dialog_content_padding"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_action" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>