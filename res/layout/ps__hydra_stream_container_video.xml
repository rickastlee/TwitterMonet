<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    custom:layout_constraintHorizontal_chainStyle="packed"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/chiclet"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ps__standard_spacing_10"
        custom:layout_constraintEnd_toEndOf="parent"
        custom:layout_constraintStart_toStartOf="parent"
        custom:layout_constraintTop_toTopOf="parent">
        <tv.periscope.android.view.SquareCardView
            android:id="@id/stream_view"
            android:layout_width="0.0dip"
            android:layout_height="0.0dip"
            android:layout_marginTop="@dimen/ps__hydra_stream_top_margin"
            android:layout_marginBottom="@dimen/ps__hydra_stream_bottom_margin"
            android:layout_marginEnd="@dimen/ps__hydra_stream_end_margin"
            custom:cardCornerRadius="@dimen/ps__hydra_stream_container_radius"
            custom:layout_constraintBottom_toBottomOf="parent"
            custom:layout_constraintDimensionRatio="1:1"
            custom:layout_constraintEnd_toEndOf="parent"
            custom:layout_constraintStart_toStartOf="parent"
            custom:layout_constraintTop_toTopOf="parent"
            custom:layout_constraintVertical_bias="0.0">
            <org.webrtc.SurfaceViewRenderer
                android:id="@id/surface_view_renderer"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />
            <TextureView
                android:id="@id/texture_view"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@id/profile_image_container"
                android:background="@color/ps__black"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <tv.periscope.android.hydra.HydraAudioIndicatingProfileImage
                    android:id="@id/profile_image"
                    android:layout_width="0.0dip"
                    android:layout_height="0.0dip"
                    android:scaleType="centerCrop"
                    android:contentDescription="@null"
                    custom:layout_constraintBottom_toBottomOf="parent"
                    custom:layout_constraintDimensionRatio="1:1"
                    custom:layout_constraintEnd_toEndOf="parent"
                    custom:layout_constraintHeight_default="percent"
                    custom:layout_constraintHeight_percent="0.7"
                    custom:layout_constraintStart_toStartOf="parent"
                    custom:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <ProgressBar
                android:layout_gravity="center"
                android:id="@id/progress_bar"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true" />
            <View
                android:id="@id/cancel_scrim"
                android:background="@drawable/ps__bg_gradient_hero_overlay"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />
            <tv.periscope.android.view.PsTextView
                android:textSize="10.0sp"
                android:textStyle="bold"
                android:textColor="@color/ps__white"
                android:layout_gravity="bottom|center"
                android:id="@id/cancel_label"
                android:padding="@dimen/ps__standard_spacing_5"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ps__standard_spacing_5"
                android:text="@string/ps__broadcasting_hydra_tap_to_cancel" />
        </tv.periscope.android.view.SquareCardView>
        <tv.periscope.android.view.PsPillTextView
            android:textSize="@dimen/font_size_small"
            android:textStyle="bold"
            android:textColor="@color/ps__white"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@id/user_badge"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ps__hydra_stream_username_pill_height"
            android:layout_marginBottom="@dimen/ps__hydra_username_margin_bottom"
            android:maxLines="1"
            custom:layout_constrainedWidth="true"
            custom:layout_constraintBottom_toBottomOf="parent"
            custom:layout_constraintEnd_toEndOf="@id/stream_view"
            custom:layout_constraintStart_toStartOf="@id/stream_view" />
        <tv.periscope.android.hydra.broadcaster.HydraGuestActionButton
            android:id="@id/guest_action_button"
            android:layout_width="@dimen/ps__hydra_stream_guest_action_button_size"
            android:layout_height="@dimen/ps__hydra_stream_guest_action_button_size"
            custom:layout_constraintBottom_toBottomOf="parent"
            custom:layout_constraintEnd_toEndOf="parent" />
        <ImageView
            android:layout_gravity="end|center|top"
            android:id="@id/hang_up_button"
            android:layout_width="@dimen/ps__hydra_stream_hang_up_button_size"
            android:layout_height="@dimen/ps__hydra_stream_hang_up_button_size"
            android:src="@drawable/ps__ic_hydra_close"
            android:scaleType="center"
            android:contentDescription="@string/ps__accessibility_hangup"
            custom:layout_constraintEnd_toEndOf="parent"
            custom:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/context_menu"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.0"
        custom:layout_constraintBottom_toBottomOf="parent"
        custom:layout_constraintStart_toStartOf="parent"
        custom:layout_constraintTop_toBottomOf="@id/chiclet">
        <LinearLayout
            android:orientation="vertical"
            android:id="@id/menu_contents"
            android:background="@drawable/ps__bg_hydra_guest_context_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ps__standard_spacing_10"
            android:layout_marginEnd="@dimen/ps__hydra_stream_end_margin" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>