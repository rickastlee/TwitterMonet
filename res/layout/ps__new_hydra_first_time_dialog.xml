<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/ps__new_hydra_first_time_dialog_bg"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space_20"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageButton
        android:id="@id/cancel_button"
        android:background="@color/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_16"
        android:src="@drawable/ps__ic_new_hydra_first_time_dialog_cancel"
        android:contentDescription="@string/cancel"
        android:layout_marginStart="@dimen/space_16" />
    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@id/banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_8"
        android:scaleType="centerCrop"
        android:contentDescription="@null" />
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:textSize="@dimen/font_size_prompt_title"
        android:textStyle="bold"
        android:textColor="@color/text_black"
        android:layout_gravity="center_horizontal"
        android:id="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_24"
        android:text="@string/ps__hydra_first_time_modal_title" />
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:textSize="@dimen/font_size_prompt_subtitle"
        android:textColor="@color/gray_700"
        android:gravity="center_horizontal"
        android:id="@id/description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_12"
        android:layout_marginStart="@dimen/space_20"
        android:layout_marginEnd="@dimen/space_20" />
    <com.twitter.ui.components.button.legacy.TwitterButton
        android:layout_gravity="center_horizontal"
        android:id="@id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_24"
        android:layout_marginBottom="@dimen/space_36"
        android:text="@string/ps__hydra_first_time_modal_confirm"
        style="@style/TwitterButtonMediumBrandFilled" />
</LinearLayout>