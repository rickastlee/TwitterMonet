<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="@dimen/ps__timecode_share_action_size"
    android:layout_height="wrap_content"
    android:layout_marginStart="0.0dip"
    android:layout_marginEnd="@dimen/ps__standard_spacing_16"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <tv.periscope.android.ui.broadcast.timecode.view.TimecodeActionView
        android:layout_gravity="center_horizontal"
        android:id="@id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ps__standard_spacing_10" />
    <tv.periscope.android.view.PsTextView
        android:textSize="12.0sp"
        android:textColor="@color/ps__white"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@id/label"
        android:layout_width="@dimen/ps__timecode_share_action_size"
        android:layout_height="wrap_content" />
</LinearLayout>