<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:background="?coreColorBorder"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/border_thickness"
        android:importantForAccessibility="no" />
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/quote_view_birdwatch_pivot_content"
        android:background="@drawable/quote_view_birdwatch_pivot_background"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="top"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_12"
            android:layout_marginBottom="@dimen/space_4">
            <ImageView
                android:id="@id/quote_view_birdwatch_pivot_icon"
                android:paddingTop="@dimen/space_2"
                android:layout_width="16.0dip"
                android:layout_height="16.0dip"
                android:src="@drawable/ic_vector_people_crowd"
                android:importantForAccessibility="no"
                app:tint="@color/twitter_blue" />
            <com.twitter.ui.components.text.legacy.TypefacesTextView
                android:textSize="@dimen/font_size_subtext_1"
                android:textStyle="bold"
                android:textColor="?coreColorPrimaryText"
                android:ellipsize="end"
                android:id="@id/quote_view_birdwatch_pivot_header"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:includeFontPadding="false"
                android:layout_weight="1.0"
                android:layout_marginStart="@dimen/space_8"
                android:layout_marginEnd="@dimen/space_4" />
            <View
                android:id="@id/quote_view_birdwatch_pivot_arrow"
                android:background="@drawable/ic_vector_arrow_right"
                android:paddingTop="@dimen/space_2"
                android:visibility="gone"
                android:layout_width="16.0dip"
                android:layout_height="16.0dip"
                android:importantForAccessibility="no"
                android:backgroundTint="?coreColorSecondaryText" />
        </LinearLayout>
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_subtext_1"
            android:textColor="?coreColorPrimaryText"
            android:ellipsize="end"
            android:id="@id/quote_view_birdwatch_pivot_subtitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_2"
            android:maxLines="3" />
        <com.twitter.ui.widget.TextLayoutView
            android:textSize="@dimen/font_size_subtext_1"
            android:textColor="?coreColorTextLink"
            android:id="@id/quote_view_birdwatch_pivot_footer"
            android:background="@null"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/quote_view_birdwatch_pivot_footer_text"
            android:layout_marginVertical="@dimen/space_4" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_8" />
    </LinearLayout>
</LinearLayout>