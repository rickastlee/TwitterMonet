<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_gravity="bottom"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="@dimen/space_4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_24"
        android:paddingHorizontal="@dimen/space_12">
        <com.twitter.core.ui.components.dialog.bottomsheet.GripperView
            android:layout_gravity="center_horizontal"
            android:id="@id/handle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_large"
            android:textStyle="normal"
            android:textColor="?coreColorPrimaryText"
            android:id="@id/anonymous_users_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_12"
            android:lines="1" />
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_normal"
            android:textStyle="normal"
            android:textColor="?coreColorSecondaryText"
            android:id="@id/anonymous_users_description"
            android:padding="@dimen/space_8"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_12"
            android:text="@string/learn_more_anonymous_users" />
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_normal"
            android:textStyle="bold"
            android:textColor="?coreColorPrimaryText"
            android:id="@id/anonymous_users_share_title"
            android:padding="@dimen/space_8"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            android:layout_marginBottom="@dimen/space_12"
            android:text="@string/share_space_anonymous_users" />
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_normal"
            android:textStyle="bold"
            android:textColor="?coreColorPrimaryText"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@id/anonymous_users_share_button"
            android:background="@drawable/rounded_rect_grey_background"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/share_space_anonymous_users_title"
            android:paddingHorizontal="@dimen/space_16"
            android:paddingVertical="@dimen/space_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/anonymous_users_description" />
    </LinearLayout>
    <tag
        android:value="RoomAnonymousUsersSettings"
        android:id="@id/weaverComponent" />
</FrameLayout>