<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:theme="@style/ThemeOverlay.Dialog.BottomSheet"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/space_20"
    android:paddingEnd="@dimen/space_20"
    twitter:layout_behavior="@string/twitter_bottom_sheet_behavior"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:twitter="http://schemas.android.com/apk/res-auto">
    <com.twitter.core.ui.components.dialog.bottomsheet.GripperView
        android:id="@id/handle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        twitter:layout_constraintEnd_toEndOf="parent"
        twitter:layout_constraintStart_toStartOf="parent"
        twitter:layout_constraintTop_toTopOf="parent" />
    <com.twitter.media.ui.image.UserImageView
        android:id="@id/avatar_icon"
        android:focusable="false"
        android:layout_width="@dimen/space_64"
        android:layout_height="@dimen/space_64"
        android:layout_marginTop="@dimen/space_40"
        android:layout_marginBottom="@dimen/space_4"
        android:src="@drawable/ic_vector_people_bg"
        android:importantForAccessibility="no"
        twitter:layout_constraintEnd_toEndOf="parent"
        twitter:layout_constraintStart_toStartOf="parent"
        twitter:layout_constraintTop_toBottomOf="@id/handle" />
    <ImageView
        android:id="@id/multiple_invite_icon"
        android:focusable="false"
        android:visibility="gone"
        android:layout_width="@dimen/space_64"
        android:layout_height="@dimen/space_64"
        android:layout_marginTop="@dimen/space_40"
        android:layout_marginBottom="@dimen/space_4"
        android:src="@drawable/ic_vector_people_bg"
        android:importantForAccessibility="no"
        twitter:layout_constraintEnd_toEndOf="parent"
        twitter:layout_constraintStart_toStartOf="parent"
        twitter:layout_constraintTop_toBottomOf="@id/avatar_icon" />
    <ImageView
        android:id="@id/cohost_invite_icon"
        android:focusable="false"
        android:visibility="gone"
        android:layout_width="@dimen/space_24"
        android:layout_height="@dimen/space_24"
        android:src="@drawable/ic_vector_people_bg"
        android:scaleType="fitXY"
        android:importantForAccessibility="no"
        twitter:layout_constraintBottom_toBottomOf="@id/avatar_icon"
        twitter:layout_constraintEnd_toEndOf="@id/avatar_icon"
        twitter:layout_constraintHorizontal_bias="0.5"
        twitter:layout_constraintVertical_bias="0.5" />
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:textSize="@dimen/font_size_xlarge"
        android:textStyle="bold"
        android:textColor="?coreColorPrimaryText"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_24"
        android:text="@string/send_cohost_description"
        twitter:layout_constraintEnd_toEndOf="parent"
        twitter:layout_constraintStart_toStartOf="parent"
        twitter:layout_constraintTop_toBottomOf="@id/multiple_invite_icon" />
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:textSize="@dimen/font_size_normal"
        android:textStyle="bold"
        android:textColor="?abstractColorDeepGray"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_8"
        android:drawableStart="@drawable/ic_vector_person"
        android:textAlignment="center"
        android:paddingStart="@dimen/space_20"
        android:paddingEnd="@dimen/space_20"
        twitter:drawableTintColor="?abstractColorDeepGray"
        twitter:layout_constraintBottom_toTopOf="@id/point_one_icon"
        twitter:layout_constraintEnd_toEndOf="parent"
        twitter:layout_constraintStart_toStartOf="parent"
        twitter:layout_constraintTop_toBottomOf="@id/title" />
    <com.twitter.ui.widget.TintableImageView
        android:id="@id/point_one_icon"
        android:layout_width="24.0dip"
        android:layout_height="24.0dip"
        android:layout_marginTop="@dimen/space_16"
        android:src="@drawable/ic_vector_checkmark"
        twitter:layout_constraintStart_toStartOf="parent"
        twitter:layout_constraintTop_toBottomOf="@id/user_name"
        twitter:tint="@color/green_500" />
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:textSize="@dimen/font_size_normal"
        android:textColor="?coreColorPrimaryText"
        android:layout_gravity="start"
        android:id="@id/point_one_title"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:text="@string/send_cohost_permissions_desc"
        android:layout_marginStart="@dimen/space_12"
        twitter:layout_constraintEnd_toEndOf="parent"
        twitter:layout_constraintStart_toEndOf="@id/point_one_icon"
        twitter:layout_constraintTop_toTopOf="@id/point_one_icon" />
    <com.twitter.ui.widget.TintableImageView
        android:id="@id/point_two_icon"
        android:layout_width="24.0dip"
        android:layout_height="24.0dip"
        android:layout_marginTop="@dimen/space_24"
        android:src="@drawable/ic_vector_close"
        twitter:layout_constraintStart_toStartOf="parent"
        twitter:layout_constraintTop_toBottomOf="@id/point_one_title"
        twitter:tint="@color/destructive_red" />
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:textSize="@dimen/font_size_normal"
        android:textColor="?coreColorPrimaryText"
        android:layout_gravity="start"
        android:id="@id/point_two_title"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_24"
        android:text="@string/send_cohost_not_permissions_desc"
        android:layout_marginStart="@dimen/space_12"
        twitter:layout_constraintEnd_toEndOf="parent"
        twitter:layout_constraintStart_toEndOf="@id/point_two_icon"
        twitter:layout_constraintTop_toBottomOf="@id/point_one_title" />
    <com.twitter.ui.widget.TintableImageView
        android:id="@id/point_three_icon"
        android:visibility="gone"
        android:layout_width="24.0dip"
        android:layout_height="24.0dip"
        android:layout_marginTop="@dimen/space_20"
        android:src="@drawable/record_icon"
        twitter:layout_constraintStart_toStartOf="parent"
        twitter:layout_constraintTop_toBottomOf="@id/point_two_title" />
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:textSize="@dimen/font_size_normal"
        android:textStyle="bold"
        android:textColor="?coreColorPrimaryText"
        android:layout_gravity="start"
        android:id="@id/point_three_title"
        android:visibility="gone"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_20"
        android:text="@string/cohost_invite_recording_title"
        android:layout_marginStart="@dimen/space_12"
        twitter:layout_constraintEnd_toEndOf="parent"
        twitter:layout_constraintStart_toEndOf="@id/point_three_icon"
        twitter:layout_constraintTop_toBottomOf="@id/point_two_title" />
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:textSize="@dimen/font_size_normal"
        android:textColor="?coreColorPrimaryText"
        android:layout_gravity="start"
        android:id="@id/point_three_desc"
        android:paddingBottom="@dimen/space_12"
        android:visibility="gone"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:text="@string/cohost_invite_recording_description"
        android:importantForAccessibility="yes"
        twitter:layout_constraintEnd_toEndOf="parent"
        twitter:layout_constraintStart_toStartOf="@id/point_three_title"
        twitter:layout_constraintTop_toBottomOf="@id/point_three_title" />
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:textSize="@dimen/font_size_small"
        android:textColor="?abstractColorDeepGray"
        android:gravity="center"
        android:id="@id/button_subtext"
        android:visibility="gone"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_24"
        android:text="@string/cohost_invite_protected_tweets_warning_text"
        twitter:layout_constraintEnd_toEndOf="@id/point_three_desc"
        twitter:layout_constraintStart_toStartOf="@id/point_three_icon"
        twitter:layout_constraintTop_toBottomOf="@id/point_three_desc" />
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:textColor="@color/white"
        android:id="@id/positive_button"
        android:background="@drawable/rounded_rectangle_purple_gradient"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_12"
        android:layout_marginBottom="@dimen/space_32"
        twitter:layout_constraintEnd_toEndOf="parent"
        twitter:layout_constraintStart_toStartOf="parent"
        twitter:layout_constraintTop_toBottomOf="@id/button_subtext"
        twitter:layout_goneMarginTop="@dimen/space_24"
        style="@style/SpacesCustomButton" />
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:textColor="?coreColorPrimaryText"
        android:id="@id/cancel_button"
        android:background="@drawable/rounded_rectangle_grey"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_16"
        android:layout_marginBottom="@dimen/space_32"
        android:text="@string/cancel"
        twitter:layout_constraintBottom_toBottomOf="parent"
        twitter:layout_constraintEnd_toEndOf="parent"
        twitter:layout_constraintStart_toStartOf="parent"
        twitter:layout_constraintTop_toBottomOf="@id/positive_button"
        style="@style/SpacesCustomButton" />
</androidx.constraintlayout.widget.ConstraintLayout>