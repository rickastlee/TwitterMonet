<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/space_4"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:id="@id/anonymous_users_view"
        android:background="@drawable/rounded_rect_twitter_gray_border"
        android:paddingTop="@dimen/space_12"
        android:paddingBottom="@dimen/space_12"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/space_16"
        android:paddingEnd="@dimen/space_16">
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textStyle="bold"
            android:textColor="?coreColorPrimaryText"
            android:layout_gravity="center"
            android:id="@id/count"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="+224.k other listener"
            android:paddingStart="@dimen/space_16" />
        <ImageView
            android:layout_gravity="end"
            android:id="@id/arrow_icon"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_vector_arrow_right"
            android:tint="?coreColorPrimaryText"
            android:importantForAccessibility="no" />
    </FrameLayout>
</LinearLayout>