<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/bg_settings_view"
    android:padding="@dimen/space_8"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="8.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@id/room_private_reaction_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_emoji_1"
        android:contentDescription="@null"
        android:paddingStart="@dimen/space_8"
        android:paddingEnd="@dimen/space_8" />
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:textSize="@dimen/font_size_normal"
        android:textColor="?coreColorPrimaryText"
        android:layout_gravity="center_vertical"
        android:id="@id/room_private_reaction_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>