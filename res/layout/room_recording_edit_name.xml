<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:twitter="http://schemas.android.com/apk/res-auto">
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:textSize="@dimen/font_size_xlarge"
        android:textStyle="bold"
        android:textColor="?coreColorPrimaryText"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@id/edit_title_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_20"
        android:text="@string/edit_name_header_text"
        android:layout_marginHorizontal="@dimen/space_24"
        twitter:layout_constraintEnd_toEndOf="parent"
        twitter:layout_constraintStart_toStartOf="parent"
        twitter:layout_constraintTop_toTopOf="parent" />
    <com.twitter.ui.widget.TwitterEditText
        android:id="@id/edit_name_edit_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_24"
        android:maxLines="1"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:layout_marginHorizontal="@dimen/space_20"
        twitter:labelColor="?coreColorPrimaryText"
        twitter:labelFontStyle="bold"
        twitter:labelText="@string/edit_name_field_header"
        twitter:layout_constraintEnd_toEndOf="parent"
        twitter:layout_constraintStart_toStartOf="parent"
        twitter:layout_constraintTop_toBottomOf="@id/edit_title_header"
        style="@style/TwitterEditText" />
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:id="@id/edit_name_save_button"
        android:background="@drawable/rounded_rectangle_purple_gradient"
        android:clickable="false"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_24"
        android:foreground="@drawable/ripple_selector_rounded_rectangle"
        android:text="@string/edit_name_save_button"
        android:alpha="0.5"
        android:layout_marginHorizontal="@dimen/space_32"
        twitter:layout_constraintEnd_toEndOf="parent"
        twitter:layout_constraintStart_toStartOf="parent"
        twitter:layout_constraintTop_toBottomOf="@id/edit_name_edit_text"
        style="@style/SpacesCustomButton" />
    <com.twitter.ui.components.button.legacy.TwitterButton
        android:textSize="@dimen/font_size_normal"
        android:textStyle="bold"
        android:id="@id/edit_name_cancel_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/edit_name_cancel_button"
        android:layout_marginHorizontal="@dimen/space_32"
        android:layout_marginVertical="@dimen/space_12"
        twitter:layout_constraintBottom_toBottomOf="parent"
        twitter:layout_constraintEnd_toEndOf="parent"
        twitter:layout_constraintStart_toStartOf="parent"
        twitter:layout_constraintTop_toBottomOf="@id/edit_name_save_button"
        style="@style/TwitterButtonLargeRegular" />
    <tag
        android:value="RoomRecordingEditName"
        android:id="@id/weaverComponent" />
</androidx.constraintlayout.widget.ConstraintLayout>