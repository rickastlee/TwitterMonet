<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@id/background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    app:layout_behavior="@string/twitter_bottom_sheet_behavior"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:orientation="horizontal"
        android:id="@id/bird"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/recorded_space_nux_header_size"
        android:layout_marginBottom="@dimen/space_4"
        android:src="@drawable/bird_with_mic"
        android:scaleType="centerCrop"
        android:importantForAccessibility="no" />
    <com.twitter.core.ui.components.dialog.bottomsheet.GripperView
        android:id="@id/handle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingTop="@dimen/space_4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bird"
        android:paddingStart="@dimen/space_20"
        android:paddingEnd="@dimen/space_20">
        <com.twitter.common.ui.RoomRecordingAnimationView
            android:id="@id/record_icon"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_xlarge"
            android:textStyle="bold"
            android:textColor="?coreColorPrimaryText"
            android:layout_gravity="center"
            android:id="@id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/recorded_spaces_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/record_icon" />
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_normal"
            android:textColor="?abstractColorDeepGray"
            android:layout_gravity="start"
            android:id="@id/intro"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            android:text="@string/recorded_spaces_intro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title" />
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_normal"
            android:textStyle="bold"
            android:textColor="?coreColorPrimaryText"
            android:layout_gravity="start"
            android:id="@id/point_one_title"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="@string/recorded_spaces_live_recording_title"
            android:layout_marginStart="@dimen/space_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/point_one_icon"
            app:layout_constraintTop_toTopOf="@id/point_one_icon" />
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_normal"
            android:textColor="?abstractColorDeepGray"
            android:layout_gravity="start"
            android:id="@id/point_one_desc"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="@string/recorded_spaces_live_recording_desc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/point_one_title"
            app:layout_constraintTop_toBottomOf="@id/point_one_title" />
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_normal"
            android:textStyle="bold"
            android:textColor="?coreColorPrimaryText"
            android:layout_gravity="start"
            android:id="@id/point_two_title"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_20"
            android:text="@string/recorded_spaces_replay_title"
            android:layout_marginStart="@dimen/space_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/point_two_icon"
            app:layout_constraintTop_toBottomOf="@id/point_one_desc" />
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_normal"
            android:textColor="?abstractColorDeepGray"
            android:layout_gravity="start"
            android:id="@id/point_two_desc"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="@string/recorded_spaces_indefinite_replay_desc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/point_two_title"
            app:layout_constraintTop_toBottomOf="@id/point_two_title" />
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_normal"
            android:textStyle="bold"
            android:textColor="?coreColorPrimaryText"
            android:layout_gravity="start"
            android:id="@id/point_three_title"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_20"
            android:text="@string/recorded_spaces_nux_part_three_title"
            android:layout_marginStart="@dimen/space_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/point_three_icon"
            app:layout_constraintTop_toBottomOf="@id/point_two_desc" />
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_normal"
            android:textColor="?abstractColorDeepGray"
            android:layout_gravity="start"
            android:id="@id/point_three_desc"
            android:paddingBottom="@dimen/space_12"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="@string/recorded_spaces_nux_part_three_desc"
            android:importantForAccessibility="yes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/point_three_title"
            app:layout_constraintTop_toBottomOf="@id/point_three_title" />
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_small"
            android:textColor="?abstractColorDeepGray"
            android:layout_gravity="center"
            android:id="@id/ok_button_description"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_20"
            android:text="@string/recorded_spaces_learn_more_text"
            android:importantForAccessibility="yes"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@id/ok_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/point_three_desc" />
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_large"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@id/ok_button"
            android:background="@drawable/rounded_rectangle_purple_gradient"
            android:paddingTop="@dimen/space_12"
            android:paddingBottom="@dimen/space_12"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_16"
            android:layout_marginBottom="@dimen/space_32"
            android:text="@string/got_it"
            android:contentDescription="@string/button_action_dismiss"
            android:paddingStart="@dimen/space_16"
            android:paddingEnd="@dimen/space_16"
            app:background="@drawable/rounded_rectangle_purple_gradient"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ok_button_description" />
        <com.twitter.ui.widget.TintableImageView
            android:id="@id/point_three_icon"
            android:layout_width="24.0dip"
            android:layout_height="24.0dip"
            android:src="@drawable/ic_vector_globe"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/point_three_title"
            app:tint="@color/purple_500" />
        <com.twitter.ui.widget.TintableImageView
            android:layout_gravity="center"
            android:id="@id/point_one_icon"
            android:layout_width="24.0dip"
            android:layout_height="24.0dip"
            android:layout_marginTop="@dimen/space_28"
            android:src="@drawable/ic_vector_mic_outline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/intro"
            app:tint="@color/purple_500" />
        <com.twitter.ui.widget.TintableImageView
            android:id="@id/point_two_icon"
            android:layout_width="24.0dip"
            android:layout_height="24.0dip"
            android:layout_marginTop="@dimen/space_20"
            android:src="@drawable/ic_vector_reload"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/point_one_desc"
            app:tint="@color/purple_500" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>