<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_gravity="bottom"
    android:paddingBottom="@dimen/space_16"
    android:focusableInTouchMode="true"
    android:descendantFocusability="beforeDescendants"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@id/edit_title_button"
        android:visibility="gone"
        android:layout_width="@dimen/space_20"
        android:layout_height="@dimen/space_20"
        android:layout_marginTop="@dimen/space_12"
        android:src="@drawable/ic_vector_pencil_icon"
        android:contentDescription="@string/edit_room_button"
        android:layout_marginStart="@dimen/space_16"
        android:layout_marginEnd="@dimen/space_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/replay_social_proof_text"
        app:tint="?coreColorPrimaryText" />
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@id/actions_layout"
        android:paddingTop="@dimen/space_20"
        android:visibility="visible"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="ltr"
        android:layout_marginHorizontal="@dimen/space_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_large"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@id/change_speed"
            android:padding="@dimen/replay_view_button_padding"
            android:layout_width="0.0dip"
            android:layout_height="@dimen/replay_view_button_size"
            android:text="@string/regular_playback_speed"
            android:layout_weight="1.0"
            android:contentDescription="null"
            app:tint="?coreColorPrimaryText" />
        <ImageView
            android:id="@id/speed_back"
            android:padding="@dimen/replay_view_button_padding"
            android:layout_width="0.0dip"
            android:layout_height="@dimen/replay_view_button_size"
            android:src="@drawable/ic_vector_skip_rewind"
            android:layout_weight="1.0"
            android:contentDescription="@string/skip_backward_content_description"
            app:tint="?coreColorPrimaryText" />
        <ImageView
            android:id="@id/toggle_playback"
            android:padding="@dimen/space_8"
            android:layout_width="0.0dip"
            android:layout_height="@dimen/replay_view_button_size"
            android:src="@drawable/ic_vector_pause"
            android:layout_weight="1.0"
            android:contentDescription="null"
            app:tint="?coreColorPrimaryText" />
        <ImageView
            android:id="@id/speed_ahead"
            android:padding="@dimen/replay_view_button_padding"
            android:layout_width="0.0dip"
            android:layout_height="@dimen/replay_view_button_size"
            android:src="@drawable/ic_vector_skip_forward"
            android:layout_weight="1.0"
            android:contentDescription="@string/skip_forward_content_description"
            app:tint="?coreColorPrimaryText" />
        <ImageView
            android:id="@id/share_button"
            android:padding="@dimen/replay_view_button_padding"
            android:visibility="visible"
            android:layout_width="0.0dip"
            android:layout_height="@dimen/replay_view_button_size"
            android:src="@drawable/ic_room_share"
            android:layout_weight="1.0"
            android:contentDescription="@string/share_room_button"
            app:tint="?coreColorPrimaryText" />
        <ImageView
            android:id="@id/room_action_clip"
            android:padding="@dimen/replay_view_button_padding"
            android:visibility="gone"
            android:layout_width="0.0dip"
            android:layout_height="@dimen/replay_view_button_size"
            android:src="@drawable/ic_vector_clip_stroke"
            android:layout_weight="1.0"
            android:contentDescription="@string/create_clip_button"
            app:tint="?coreColorPrimaryText" />
    </LinearLayout>
    <LinearLayout
        android:id="@id/host_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_12"
        android:layout_marginHorizontal="@dimen/space_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title">
        <com.twitter.media.ui.image.UserImageView
            android:layout_gravity="center"
            android:id="@id/host_avatar"
            android:layout_width="@dimen/replay_consumption_host_avatar_height"
            android:layout_height="@dimen/replay_consumption_host_avatar_height"
            app:userImageSize="@dimen/replay_consumption_host_avatar_height" />
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_subtext_1"
            android:textColor="?coreColorPrimaryText"
            android:ellipsize="end"
            android:layout_gravity="center"
            android:id="@id/hosted_by_text"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hosted_by"
            android:layout_marginStart="@dimen/space_8" />
        <include
            android:id="@id/follow_button_container"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/are_following"
            android:layout_marginStart="@dimen/space_8"
            app:layout_constraintBottom_toBottomOf="@id/host_avatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/host_avatar"
            layout="@layout/follow_button_container" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@id/test_layout"
        android:layout_width="0.0dip"
        android:layout_height="0.0dip"
        app:layout_constraintBottom_toTopOf="@id/transcription_top_barrier"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/host_info">
        <com.twitter.media.ui.image.UserImageView
            android:id="@id/speaker_avatar"
            android:layout_width="@dimen/replay_consumption_speaker_avatar_height"
            android:layout_height="@dimen/replay_consumption_speaker_avatar_height"
            android:layout_marginStart="@dimen/space_16"
            android:layout_marginEnd="@dimen/space_16"
            app:userImageSize="@dimen/replay_consumption_speaker_avatar_height" />
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_normal"
            android:textStyle="bold"
            android:textColor="?coreColorPrimaryText"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@id/speaker_name"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            android:maxLines="1"
            android:layout_marginStart="@dimen/space_16"
            android:layout_marginEnd="@dimen/space_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/speaker_avatar"
            app:layout_goneMarginTop="@dimen/space_12" />
        <LinearLayout
            android:gravity="center"
            android:id="@id/speaker_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/speaker_name">
            <com.twitter.common.ui.isTalkingView.IsTalkingView
                android:layout_gravity="center_vertical"
                android:id="@id/speaking_indicator"
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:paddingEnd="@dimen/space_4"
                app:animationDuration="200"
                app:barColor="@color/purple_500" />
            <com.twitter.ui.components.text.legacy.TypefacesTextView
                android:textSize="@dimen/font_size_normal"
                android:textStyle="normal"
                android:textColor="?coreColorPrimaryText"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@id/role"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1" />
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:id="@id/transcriptions"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space_72"
        android:layout_marginTop="@dimen/space_4"
        android:paddingStart="@dimen/space_16"
        android:paddingEnd="@dimen/space_16"
        app:layout_constraintBottom_toTopOf="@id/transcriptions_divider_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/transcriptions_divider_top"
        app:layout_constraintVertical_bias="1.0">
        <include
            android:id="@id/transcriptions_layout"
            layout="@layout/component_transcriptions" />
    </ScrollView>
    <androidx.constraintlayout.widget.Barrier
        android:id="@id/transcription_top_barrier"
        android:layout_width="0.0dip"
        android:layout_height="0.0dip"
        app:barrierDirection="top"
        app:constraint_referenced_ids="transcriptions_divider_top, scrubber" />
    <View
        android:id="@id/transcriptions_divider_top"
        android:background="?coreColorBorder"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/room_divider_height"
        android:layout_marginBottom="@dimen/space_4"
        app:layout_constraintTop_toBottomOf="@id/test_layout" />
    <View
        android:id="@id/transcriptions_divider_bottom"
        android:background="?coreColorBorder"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/room_divider_height"
        android:layout_marginTop="@dimen/space_4"
        android:layout_marginBottom="@dimen/space_16"
        app:layout_constraintBottom_toTopOf="@id/scrubber"
        app:layout_constraintTop_toBottomOf="@id/transcriptions" />
    <SeekBar
        android:id="@id/scrubber"
        android:paddingBottom="@dimen/space_8"
        android:visibility="visible"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_24"
        android:progressDrawable="@drawable/ic_av_scrubber_light_background"
        android:thumb="@drawable/room_replay_scrubber_thumb"
        android:thumbOffset="0.0dip"
        android:contentDescription="@string/scrubber_content_description"
        android:layoutDirection="ltr"
        android:paddingStart="0.0dip"
        android:paddingEnd="0.0dip"
        android:layout_marginStart="@dimen/space_16"
        android:layout_marginEnd="@dimen/space_16"
        android:progressTint="@color/replay_progress_seekbar_color"
        android:progressBackgroundTint="?abstractColorLightGray"
        android:thumbTint="@color/replay_progress_seekbar_color"
        app:layout_constraintBottom_toTopOf="@id/time_left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <View
        android:id="@id/tooltip_arrow"
        android:background="@drawable/tooltip_triangle_purple"
        android:visibility="invisible"
        android:layout_width="@dimen/space_12"
        android:layout_height="@dimen/space_12"
        android:rotation="180.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_start_time_tooltip" />
    <View
        android:id="@id/start_time_dot"
        android:background="@drawable/seekbar_dot_indicator"
        android:visibility="invisible"
        android:layout_width="@dimen/space_8"
        android:layout_height="@dimen/space_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/scrubber" />
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:textSize="@dimen/font_size_normal"
        android:textColor="?abstractColorDeepGray"
        android:id="@id/playback_progress"
        android:background="@color/clear"
        android:paddingTop="@dimen/space_4"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/actions_layout"
        app:layout_constraintStart_toStartOf="@id/scrubber" />
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:textSize="@dimen/font_size_normal"
        android:textColor="?abstractColorDeepGray"
        android:id="@id/time_left"
        android:background="@color/clear"
        android:paddingTop="@dimen/space_4"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/actions_layout"
        app:layout_constraintEnd_toEndOf="@id/scrubber" />
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:textSize="@dimen/font_size_subtext_1"
        android:textColor="?coreColorPrimaryText"
        android:id="@id/super_followers_label"
        android:background="@drawable/recording_icon"
        android:paddingTop="@dimen/space_4"
        android:paddingBottom="@dimen/space_4"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/super_followers_label"
        android:drawablePadding="@dimen/space_4"
        android:drawableStart="@drawable/ic_super_follow_spaces"
        android:paddingStart="@dimen/space_8"
        android:paddingEnd="@dimen/space_8"
        android:drawableTint="@color/super_follows_solid"
        android:layout_marginHorizontal="@dimen/space_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/_header"
        style="@style/TextBold" />
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:textSize="@dimen/font_size_subtext_1"
        android:textColor="?abstractColorDeepGray"
        android:ellipsize="end"
        android:id="@id/replay_social_proof_text"
        android:visibility="visible"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_4"
        android:text="@string/recording_time"
        android:maxLines="1"
        android:layout_marginHorizontal="@dimen/space_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/super_followers_label" />
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:textSize="@dimen/font_size_headline_2"
        android:textStyle="bold"
        android:textColor="?coreColorPrimaryText"
        android:ellipsize="end"
        android:id="@id/title"
        android:visibility="visible"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_4"
        android:layout_marginBottom="@dimen/space_12"
        android:textAlignment="viewStart"
        android:layout_marginStart="@dimen/space_16"
        android:layout_marginEnd="@dimen/space_16"
        app:layout_constraintEnd_toStartOf="@id/edit_title_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/replay_social_proof_text" />
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:textSize="@dimen/font_size_normal"
        android:textColor="#ffffffff"
        android:id="@id/edit_start_time_tooltip"
        android:background="@drawable/rounded_rectangle_purple_nux"
        android:padding="@dimen/space_8"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_8"
        android:maxWidth="150.0dip"
        android:text="@string/recording_initial_edit_start_time_tooltip_text"
        app:layout_constraintBottom_toTopOf="@id/scrubber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <include
        android:id="@id/_header"
        layout="@layout/layout_space_header" />
</androidx.constraintlayout.widget.ConstraintLayout>