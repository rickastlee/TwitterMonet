<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="?selectableItemBackground"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/select_sheet_item_min_height"
    android:paddingStart="@dimen/space_32"
    android:paddingEnd="@dimen/space_32"
    style="@style/ActionSheetItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:textSize="@dimen/font_size_normal"
        android:textStyle="bold"
        android:textColor="?coreColorPrimaryText"
        android:id="@id/select_title"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_4"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toTopOf="@id/select_subtitle"
        app:layout_constraintEnd_toStartOf="@id/select_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:textSize="@dimen/font_size_normal"
        android:textColor="?coreColorSecondaryText"
        android:id="@id/select_subtitle"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/select_link_text"
        app:layout_constraintEnd_toStartOf="@id/select_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/select_title"
        app:layout_goneMarginBottom="16.0dip" />
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:textSize="@dimen/font_size_small"
        android:textStyle="bold"
        android:textColor="@color/text_blue"
        android:id="@id/select_link_text"
        android:paddingTop="@dimen/space_8"
        android:paddingBottom="@dimen/space_16"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="@drawable/ripple_selector_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/select_subtitle" />
    <RadioButton
        android:id="@id/select_button"
        android:background="@null"
        android:layout_width="@dimen/space_24"
        android:layout_height="@dimen/space_24"
        android:button="@drawable/green_checkmark_radio_button"
        android:layout_marginStart="@dimen/space_24"
        app:layout_constraintBottom_toBottomOf="@id/select_link_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/select_title" />
</androidx.constraintlayout.widget.ConstraintLayout>