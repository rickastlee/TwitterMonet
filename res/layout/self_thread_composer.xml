<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <com.twitter.ui.view.DraggableDrawerLayout
            android:id="@id/drawer_layout"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            app:aboveDrawerViewId="@id/composer">
            <FrameLayout
                android:id="@id/composer"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <com.twitter.composer.view.ComposerToolbar
                        android:id="@id/composer_toolbar"
                        android:background="?toolbarBackgroundColor"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="?toolBarSize"
                        app:navigationIcon="?toolbarCloseIcon" />
                    <com.twitter.ui.components.inlinecallout.HorizonInlineCalloutView
                        android:id="@id/delegate_account_banner"
                        android:visibility="gone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_16"
                        android:layout_marginEnd="@dimen/space_16" />
                    <View
                        android:id="@id/top_border"
                        android:background="?coreColorBorder"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/border_thickness" />
                    <com.twitter.composer.view.LayoutAwareRecyclerView
                        android:id="@id/tweet_storm_recycler_view"
                        android:clipChildren="false"
                        android:descendantFocusability="beforeDescendants"
                        android:layout_width="fill_parent"
                        android:layout_height="0.0dip"
                        android:layout_weight="1.0"
                        android:overScrollMode="ifContentScrolls" />
                </LinearLayout>
                <ImageView
                    android:id="@id/composer_foreground"
                    android:background="?coreColorAppBackground"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:contentDescription="@null"
                    android:alpha="0.0" />
            </FrameLayout>
            <FrameLayout
                android:id="@id/action_drawer"
                android:background="?coreColorAppBackground"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <FrameLayout
                    android:id="@id/action_drawer_container"
                    android:background="@null"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />
            </FrameLayout>
        </com.twitter.ui.view.DraggableDrawerLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@id/composer_footer_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.0">
            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <com.twitter.composer.mediarail.view.MediaRailView
                    android:id="@id/media_rail"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </FrameLayout>
            <include
                android:id="@id/composer_education_banner"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                layout="@layout/private_tweet_banner" />
            <include
                android:layout_gravity="bottom"
                android:id="@id/conversation_controls_view"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                layout="@layout/composer_conversation_control_cta" />
            <include
                android:layout_gravity="bottom"
                android:id="@id/composer_communities_narrowcast_cta"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                layout="@layout/composer_narrowcast_cta" />
            <View
                android:background="?coreColorBorder"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/border_thickness" />
            <com.twitter.composer.view.ComposerFooterActionBar
                android:orientation="horizontal"
                android:id="@id/composer_footer_action_bar"
                android:background="?toolbarBackgroundColor"
                android:layout_width="fill_parent"
                android:layout_height="56.0dip"
                android:paddingEnd="@dimen/space_4" />
        </LinearLayout>
    </LinearLayout>
    <com.twitter.ui.widget.touchintercept.TouchInterceptingFrameLayout
        android:id="@id/loading"
        android:background="@color/app_background"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <ProgressBar
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            style="?android:progressBarStyle" />
    </com.twitter.ui.widget.touchintercept.TouchInterceptingFrameLayout>
</FrameLayout>