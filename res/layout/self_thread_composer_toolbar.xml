<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_gravity="end"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:layout_marginEnd="12.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:textSize="@dimen/font_size_normal"
        android:textStyle="bold"
        android:textColor="@color/twitter_blue"
        android:layout_gravity="center_vertical"
        android:id="@id/drafts_button"
        android:background="?selectableItemBackgroundBorderless"
        android:padding="4.0dip"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/drafts"
        android:contentDescription="@string/button_action_drafts"
        android:layout_marginEnd="14.0dip" />
    <com.twitter.composer.view.EditTimerView
        android:textSize="@dimen/font_size_normal"
        android:textStyle="bold"
        android:textColor="?dynamicColorGray900"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:id="@id/edit_timer"
        android:background="@drawable/edit_timer_bg"
        android:padding="4.0dip"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="48.0dip"
        android:layout_marginEnd="14.0dip" />
    <com.twitter.ui.components.button.legacy.TwitterButton
        android:layout_gravity="end|center"
        android:id="@id/button_tweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/post_tweet"
        style="@style/TwitterButtonMediumBrandFilled" />
</LinearLayout>