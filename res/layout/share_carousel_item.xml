<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@id/carousel_item_icon"
        android:layout_width="@dimen/share_sheet_carousel_icon_size"
        android:layout_height="@dimen/share_sheet_carousel_icon_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/ShareSheetCarouselItemIcon" />
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:id="@id/carousel_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/carousel_item_icon"
        style="@style/ShareSheetCarouselItemTitle" />
</merge>