<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@id/share_sheet_content"
    android:paddingBottom="@dimen/space_8"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.AppCompatEditText
        android:textSize="@dimen/font_size_normal"
        android:gravity="center_vertical"
        android:id="@id/suggestion_edit_text"
        android:background="@null"
        android:paddingTop="6.0dip"
        android:paddingBottom="6.0dip"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/toolbar_height"
        android:hint="@string/search_for_people_and_groups"
        android:maxLines="2"
        android:drawablePadding="@dimen/space_16"
        android:inputType="textMultiLine|textNoSuggestions"
        android:isScrollContainer="true"
        android:imeOptions="flagNoExtractUi"
        android:drawableStart="@drawable/ic_vector_search_stroke"
        android:paddingStart="@dimen/space_16"
        android:paddingEnd="@dimen/space_16"
        android:nestedScrollingEnabled="false"
        android:drawableTint="?coreColorSecondaryText"
        android:lineHeight="44.0dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="?suggestionEditTextStyle">
        <tag
            android:value="ShareViaDMText"
            android:id="@id/weaverComponent" />
    </androidx.appcompat.widget.AppCompatEditText>
    <View
        android:id="@id/input_divider"
        android:background="?coreColorBorder"
        android:layout_width="0.0dip"
        android:layout_height="@dimen/border_thickness"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/suggestion_edit_text" />
    <androidx.recyclerview.widget.RecyclerView
        android:orientation="vertical"
        android:id="@id/recycler_view"
        android:layout_width="0.0dip"
        android:layout_height="0.0dip"
        android:minHeight="@dimen/space_32"
        android:nestedScrollingEnabled="true"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/actions_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_divider" />
    <View
        android:id="@id/actions_divider"
        android:background="?coreColorBorder"
        android:layout_width="0.0dip"
        android:layout_height="@dimen/border_thickness"
        app:layout_constraintBottom_toTopOf="@id/message_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recycler_view" />
    <com.twitter.ui.widget.TwitterEditText
        android:textSize="@dimen/font_size_normal"
        android:id="@id/message_text"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:hint="@string/dm_quick_share_add_a_comment_hint"
        android:inputType="textCapSentences|textMultiLine"
        android:isScrollContainer="true"
        android:imeOptions="flagNoExtractUi"
        android:layout_marginStart="@dimen/space_16"
        android:layout_marginEnd="@dimen/space_16"
        android:nestedScrollingEnabled="false"
        app:layout_constraintBottom_toTopOf="@id/send_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/actions_divider" />
    <com.twitter.ui.components.button.compose.HorizonComposeButton
        android:id="@id/send_to_group_button"
        android:visibility="gone"
        android:layout_width="0.0dip"
        android:layout_height="@dimen/space_32"
        android:text="@string/send_to_group"
        android:layout_marginEnd="@dimen/space_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/send_button"
        style="@style/TwitterButtonSmallPrimaryOutlined" />
    <com.twitter.ui.components.button.compose.HorizonComposeButton
        android:id="@id/send_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space_32"
        android:text="@string/post_button_send"
        android:layout_marginEnd="@dimen/space_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/TwitterButtonSmallPrimaryOutlined" />
    <tag
        android:value="ShareViaDM"
        android:id="@id/weaverComponent" />
</androidx.constraintlayout.widget.ConstraintLayout>