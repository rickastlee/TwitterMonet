<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:twitter="http://schemas.android.com/apk/res-auto">
    <com.twitter.media.ui.image.MediaImageView
        android:id="@id/sponsored_icon"
        android:layout_width="24.0dip"
        android:layout_height="24.0dip"
        android:layout_marginEnd="10.0dip"
        twitter:scaleType="centerInside" />
    <TextView
        android:textAppearance="?tabLayoutTextStyle"
        android:ellipsize="end"
        android:id="@id/sponsored_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:fontFamily="?fontFamilyMedium" />
</LinearLayout>