<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_gravity="center"
    android:orientation="vertical"
    android:id="@id/sticker_catalog_error"
    android:visibility="gone"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:textSize="@dimen/font_size_large"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stickers_catalog_error_message"
        style="?stickerSheetPrimaryText" />
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:textSize="@dimen/font_size_small"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14.0dip"
        android:text="@string/stickers_catalog_error_message_secondary"
        style="?stickerSheetPrimaryText" />
    <com.twitter.ui.components.button.legacy.TwitterButton
        android:textSize="@dimen/font_size_small"
        android:layout_gravity="center_horizontal"
        android:id="@id/retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14.0dip"
        android:text="@string/notif_action_retry"
        android:paddingStart="16.0dip"
        android:paddingEnd="16.0dip"
        style="?stickerSheetErrorButton" />
</LinearLayout>