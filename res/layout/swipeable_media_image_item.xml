<?xml version="1.0" encoding="utf-8"?>
<com.twitter.ui.widget.RoundedRectViewMask
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:twitter="http://schemas.android.com/apk/res-auto">
    <com.twitter.media.ui.fresco.FrescoMediaImageView
        android:id="@id/media_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <com.twitter.media.ui.fresco.FrescoDraweeView
            android:id="@id/image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            twitter:failureImage="@drawable/bg_tweet_placeholder_photo_error"
            twitter:placeholderImage="@drawable/drawable_color_placeholder_bg" />
    </com.twitter.media.ui.fresco.FrescoMediaImageView>
    <ViewStub
        android:layout_gravity="start|bottom|center"
        android:id="@id/vanity_url_stub"
        android:layout="@layout/website_vanity_url_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_12"
        android:layout_marginStart="@dimen/space_12" />
</com.twitter.ui.widget.RoundedRectViewMask>