<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingEnd="@dimen/space_12"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:twitter="http://schemas.android.com/apk/res-auto">
    <com.twitter.media.ui.image.UserImageView
        android:id="@id/social_proof_avatar"
        android:visibility="gone"
        android:importantForAccessibility="no"
        twitter:userImageSize="18.0dip"
        style="@style/SocialProofAvatar" />
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:ellipsize="end"
        android:id="@id/trend_metadata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="@integer/trends_plus_meta_description_max_lines"
        style="@style/GuideText.Small.Secondary" />
</LinearLayout>