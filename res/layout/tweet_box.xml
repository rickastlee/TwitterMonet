<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:twitter="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0.0dip"
        android:layout_height="0.0dip" />
    <com.twitter.ui.autocomplete.PopupSuggestionEditText
        android:textSize="@dimen/font_size_normal"
        android:gravity="start|center"
        android:id="@id/tweet_text"
        android:paddingTop="@dimen/standard_spacing"
        android:paddingBottom="@dimen/standard_spacing"
        android:scrollbars="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:inputType="textAutoCorrect|textCapSentences|textMultiLine"
        android:imeOptions="actionSend|flagNoEnterAction"
        android:textAlignment="viewStart"
        android:paddingStart="@dimen/list_row_padding_horizontal"
        android:paddingEnd="@dimen/list_row_padding_horizontal"
        twitter:compoundDrawablesTint="@color/twitter_blue"
        twitter:removePastedStyles="true"
        twitter:showAsDropdown="false"
        twitter:showFullScreen="true"
        style="@style/TwitterEditText.NoPadding" />
</merge>