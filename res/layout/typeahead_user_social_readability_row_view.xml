<?xml version="1.0" encoding="utf-8"?>
<com.twitter.ui.user.UserSocialView
    android:background="?suggestionRowBackground"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    style="@style/ListRow.WhoToFollow"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:twitter="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:descendantFocusability="blocksDescendants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="yes">
        <FrameLayout
            android:id="@id/audio_space_avatar_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/space_12">
            <ImageView
                android:layout_gravity="center"
                android:id="@id/audio_space_purple_background"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search_audiospace_avatar_ring"
                android:contentDescription="@null"
                android:importantForAccessibility="no" />
            <com.twitter.media.ui.image.UserImageView
                android:layout_gravity="center"
                android:id="@id/user_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:importantForAccessibility="no"
                twitter:userImageSize="normal" />
            <ImageView
                android:layout_gravity="end|bottom|center"
                android:id="@id/audio_space_live_badge"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:contentDescription="@null"
                android:importantForAccessibility="no"
                twitter:srcCompat="@drawable/ic_vector_audio_space_indicator" />
        </FrameLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@id/name_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/search_typeahead_name_container_top_margin"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/audio_space_avatar_container">
            <include
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/user_info_name" />
            <com.twitter.ui.components.text.legacy.TypefacesTextView
                android:id="@id/screenname_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                style="@style/Username" />
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:id="@id/social_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_container"
            android:layout_toEndOf="@id/audio_space_avatar_container">
            <com.twitter.media.ui.fresco.FrescoMediaImageView
                android:id="@id/fresco_social_context_badge"
                android:visibility="gone"
                android:layout_width="@dimen/space_12"
                android:layout_height="@dimen/space_12"
                android:layout_marginTop="@dimen/space_4"
                android:layout_marginBottom="@dimen/space_8"
                android:layout_marginEnd="@dimen/space_2"
                twitter:defaultDrawableTint="?coreColorSecondaryText"
                twitter:scaleType="fit" />
            <com.twitter.ui.components.text.legacy.TypefacesTextView
                android:textSize="@dimen/font_size_small"
                android:textColor="?coreColorSecondaryText"
                android:ellipsize="end"
                android:id="@id/social_info"
                android:paddingTop="@dimen/space_2"
                android:paddingBottom="0.0dip"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textAlignment="viewStart" />
        </LinearLayout>
        <com.twitter.ui.widget.BadgeView
            android:id="@id/promoted"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/social_container"
            android:layout_marginStart="0.0dip"
            android:layout_toEndOf="@id/audio_space_avatar_container"
            style="@style/BadgeView" />
    </RelativeLayout>
</com.twitter.ui.user.UserSocialView>