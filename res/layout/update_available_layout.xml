<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@id/update_available_layout"
    android:padding="@dimen/space_16"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:textSize="@dimen/font_size_xlarge"
        android:gravity="center"
        android:id="@id/update_available_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_80"
        android:layout_marginBottom="@dimen/space_8"
        android:text="@string/app_update_title"
        app:layout_constraintBottom_toTopOf="@id/update_available_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/PrimaryText" />
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:gravity="center"
        android:id="@id/update_available_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/update_available"
        app:layout_constraintBottom_toTopOf="@id/update_available_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/update_available_title"
        style="@style/SecondaryText" />
    <com.twitter.ui.components.button.legacy.TwitterButton
        android:id="@id/update_available_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_40"
        android:text="@string/start_update"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/update_available_text"
        style="@style/TwitterButtonLargeBrandFilled" />
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:textSize="@dimen/font_size_small"
        android:id="@id/update_available_legal_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/prompt_vertical_subtitle_margin"
        android:text=""
        android:paddingStart="@dimen/prompt_fullscreen_text_padding_horizontal"
        android:paddingEnd="@dimen/prompt_fullscreen_text_padding_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/SecondaryText" />
    <tag
        android:value="UpdateAvailable"
        android:id="@id/weaverComponent" />
</androidx.constraintlayout.widget.ConstraintLayout>