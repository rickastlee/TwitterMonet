<?xml version="1.0" encoding="utf-8"?>
<com.twitter.ui.view.GroupedRowView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/root_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="?timelineRowHorizontalPadding"
        android:paddingVertical="@dimen/space_12">
        <com.twitter.media.ui.fresco.FrescoMediaImageView
            android:id="@id/cover_image"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            app:defaultDrawable="@drawable/drawable_color_placeholder_bg"
            app:imageCornerRadius="8.0dip"
            app:layout_constraintStart_toStartOf="parent" />
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_normal"
            android:textStyle="bold"
            android:textColor="?coreColorPrimaryText"
            android:ellipsize="end"
            android:id="@id/channel_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_marginStart="@dimen/space_12"
            app:layout_constraintStart_toEndOf="@id/cover_image"
            app:layout_constraintVertical_chainStyle="packed" />
        <ImageView
            android:id="@id/private_badge"
            android:visibility="gone"
            android:layout_width="@dimen/font_size_normal"
            android:layout_height="@dimen/font_size_normal"
            android:src="?iconProtected"
            android:contentDescription="@string/icon_protected"
            android:layout_marginStart="@dimen/space_4"
            app:layout_constraintBottom_toBottomOf="@id/channel_title"
            app:layout_constraintStart_toEndOf="@id/channel_title"
            app:layout_constraintTop_toTopOf="@id/channel_title"
            app:tint="?coreColorBadgeProtected" />
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_subtext_2"
            android:textStyle="normal"
            android:textColor="?coreColorSecondaryText"
            android:ellipsize="end"
            android:id="@id/textview_members_context"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_marginStart="@dimen/space_4"
            app:layout_constraintBaseline_toBaselineOf="@id/channel_title"
            app:layout_constraintEnd_toStartOf="@id/barrier"
            app:layout_constraintStart_toEndOf="@id/private_badge" />
        <com.twitter.ui.widget.FacepileView
            android:id="@id/followers_facepile_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_4"
            android:contentDescription="@null"
            android:paddingEnd="@dimen/space_4"
            app:avatarSize="@dimen/pico_user_image_size"
            app:layout_constraintStart_toStartOf="@id/channel_title"
            app:layout_constraintTop_toBottomOf="@id/channel_title"
            app:maxAvatars="3" />
        <com.twitter.ui.components.text.legacy.TypefacesTextView
            android:textSize="@dimen/font_size_subtext_2"
            android:textStyle="normal"
            android:textColor="?coreColorSecondaryText"
            android:ellipsize="end"
            android:id="@id/textview_followers_context"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="true"
            app:layout_constraintBottom_toBottomOf="@id/followers_facepile_view"
            app:layout_constraintEnd_toStartOf="@id/barrier"
            app:layout_constraintStart_toEndOf="@id/followers_facepile_view"
            app:layout_constraintTop_toTopOf="@id/followers_facepile_view" />
        <com.twitter.ui.components.button.legacy.ToggleTwitterButton
            android:id="@id/minimal_follow_button"
            android:visibility="gone"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:layout_marginStart="@dimen/space_12"
            app:iconSize="@dimen/follow_button_icon_size"
            app:iconSrc="@drawable/ic_vector_plus_circle_fill"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shouldToggleOnClick="true"
            app:styleIdOff="@style/TwitterButtonTransparentCircleIconOnly"
            app:styleIdOn="@style/TwitterButtonTransparentCircleIconOnly"
            style="@style/TwitterButtonTransparentCircleIconOnly" />
        <ImageButton
            android:id="@id/pin_list_button"
            android:background="?selectableItemBackgroundBorderless"
            android:visibility="gone"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:src="@drawable/ic_vector_pin"
            android:layout_marginStart="@dimen/space_12"
            android:layout_marginEnd="@dimen/space_8"
            android:backgroundTint="@color/clear"
            app:layout_constraintBottom_toBottomOf="@id/cover_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/cover_image" />
        <View
            android:id="@id/checkable_icon_button"
            android:background="@drawable/ic_vector_checkmark_circle_fill_green_tint"
            android:visibility="gone"
            android:layout_width="@dimen/space_24"
            android:layout_height="@dimen/space_24"
            android:layout_marginStart="@dimen/space_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/channel_title" />
        <FrameLayout
            android:id="@id/caret_container"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/channel_title">
            <ViewStub
                android:id="@id/caret"
                android:layout="@layout/generic_activity_caret"
                android:inflatedId="@id/caret_inflated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
        <androidx.constraintlayout.widget.Barrier
            android:id="@id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="start"
            app:constraint_referenced_ids="caret_container,checkable_icon_button,pin_list_button,minimal_follow_button" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.twitter.ui.view.GroupedRowView>