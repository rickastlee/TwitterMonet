<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:twitter="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@id/user_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@id/action_button_deny_frame"
            android:visibility="gone"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingEnd="@dimen/list_row_padding_horizontal"
            android:layout_alignParentEnd="true">
            <ImageButton
                android:id="@id/action_button_deny"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/mini_user_image_size"
                android:contentDescription="@string/button_deny"
                twitter:tint="?pendingFollowerAcceptDenyTint"
                style="?acceptDenyButtonStyleApprovalView" />
        </FrameLayout>
        <FrameLayout
            android:id="@id/action_button_accept_frame"
            android:paddingTop="@dimen/list_row_padding_vertical"
            android:paddingBottom="@dimen/list_row_padding_vertical"
            android:visibility="gone"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingStart="@dimen/list_row_padding_horizontal"
            android:paddingEnd="@dimen/list_row_padding_horizontal"
            android:layout_toStartOf="@id/action_button_deny_frame">
            <ImageButton
                android:id="@id/action_button_accept"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/mini_user_image_size"
                android:contentDescription="@string/button_accept"
                twitter:tint="?pendingFollowerAcceptDenyTint"
                style="?acceptDenyButtonStyleApprovalView" />
        </FrameLayout>
        <com.twitter.ui.components.button.legacy.ToggleTwitterButton
            android:id="@id/follow_button"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/follow"
            android:height="@dimen/user_follow_btn_min_height"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            twitter:iconSize="@dimen/follow_button_icon_size"
            twitter:iconSrc="?iconFollow"
            twitter:shouldToggleOnClick="false"
            twitter:styleIdOff="?mediumToggledOffButtonStyle"
            twitter:styleIdOn="?mediumToggledOnButtonStyle"
            twitter:toggleIconSize="@dimen/follow_button_icon_size"
            twitter:toggleIconSrc="?iconFollowing"
            style="@style/TwitterButtonMediumBrandOutlined" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/action_button_accept_frame"
            android:layout_alignParentStart="true">
            <include
                layout="@layout/user_info" />
        </RelativeLayout>
    </RelativeLayout>
    <com.twitter.ui.components.text.legacy.TypefacesTextView
        android:id="@id/profile_description_item"
        android:paddingTop="6.0dip"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_container"
        style="?userWithBioDescriptionStyle" />
    <include
        layout="@layout/user_promoted_info" />
</merge>