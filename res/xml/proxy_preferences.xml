<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">
    <SwitchPreference
        android:title="@string/settings_enable_http_proxy_title"
        android:key="proxy_enabled_switch"
        android:summary="@string/settings_enable_http_proxy_summary"
        android:order="11"
        android:defaultValue="false" />
    <EditTextPreference
        android:hint="@string/settings_http_proxy_host_hint"
        android:title="@string/settings_http_proxy_host_title"
        android:key="proxy_host"
        android:summary="@string/settings_http_proxy_host_summary"
        android:order="20"
        android:defaultValue="" />
    <EditTextPreference
        android:hint="@string/settings_http_proxy_port_hint"
        android:title="@string/settings_http_proxy_port_title"
        android:key="proxy_port"
        android:summary="@string/settings_http_proxy_port_summary"
        android:order="30"
        android:defaultValue=""
        android:inputType="number" />
</PreferenceScreen>